<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Dynamic Brushes - تستخدم DynamicResource للألوان لتسمح بتبديل الثيمات -->
  
  <!-- Primary Brushes -->
  <SolidColorBrush x:Key="Brush.Primary" Color="{DynamicResource Color.Primary}"/>
  <SolidColorBrush x:Key="Brush.PrimaryLight" Color="{DynamicResource Color.PrimaryLight}"/>
  <SolidColorBrush x:Key="Brush.PrimaryDark" Color="{DynamicResource Color.PrimaryDark}"/>
  <SolidColorBrush x:Key="Brush.Secondary" Color="{DynamicResource Color.Secondary}"/>
  <SolidColorBrush x:Key="Brush.Accent" Color="{DynamicResource Color.Accent}"/>
  <SolidColorBrush x:Key="Brush.Success" Color="{DynamicResource Color.Success}"/>
  <SolidColorBrush x:Key="Brush.Warning" Color="{DynamicResource Color.Warning}"/>
  <SolidColorBrush x:Key="Brush.Danger" Color="{DynamicResource Color.Danger}"/>
  <SolidColorBrush x:Key="Brush.Info" Color="{DynamicResource Color.Info}"/>
  
  <!-- Alias Brushes for backward compatibility -->
  <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource Color.Primary}"/>
  <SolidColorBrush x:Key="PrimaryLightBrush" Color="{DynamicResource Color.PrimaryLight}"/>
  <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{DynamicResource Color.PrimaryDark}"/>
  <SolidColorBrush x:Key="SecondaryTextBrush" Color="{DynamicResource Color.TextSecondary}"/>
  <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{DynamicResource Color.TextOnPrimary}"/>
  <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource Color.Success}"/>
  <SolidColorBrush x:Key="InfoBrush" Color="{DynamicResource Color.Info}"/>
  <SolidColorBrush x:Key="DangerBrush" Color="{DynamicResource Color.Danger}"/>
  <SolidColorBrush x:Key="MutedBrush" Color="{DynamicResource Color.TextMuted}"/>
  <SolidColorBrush x:Key="ConsistentBorderBrush" Color="{DynamicResource Color.Border}"/>
  <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource Color.Background}"/>
  <SolidColorBrush x:Key="SurfaceBrush" Color="{DynamicResource Color.Surface}"/>
  <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource Color.Border}"/>
  
  <!-- Surface Brushes -->
  <SolidColorBrush x:Key="Brush.Surface" Color="{DynamicResource Color.Surface}"/>
  <SolidColorBrush x:Key="Brush.Background" Color="{DynamicResource Color.Background}"/>
  <SolidColorBrush x:Key="Brush.Card" Color="{DynamicResource Color.Card}"/>
  
  <!-- Border & Divider Brushes -->
  <SolidColorBrush x:Key="Brush.Border" Color="{DynamicResource Color.Border}"/>
  <SolidColorBrush x:Key="Brush.Divider" Color="{DynamicResource Color.Divider}"/>
  
  <!-- Text Brushes -->
  <SolidColorBrush x:Key="Brush.TextPrimary" Color="{DynamicResource Color.TextPrimary}"/>
  <SolidColorBrush x:Key="Brush.TextSecondary" Color="{DynamicResource Color.TextSecondary}"/>
  <SolidColorBrush x:Key="Brush.TextMuted" Color="{DynamicResource Color.TextMuted}"/>
  <SolidColorBrush x:Key="Brush.TextOnPrimary" Color="{DynamicResource Color.TextOnPrimary}"/>
  
  <!-- Input Brushes -->
  <SolidColorBrush x:Key="Brush.InputBackground" Color="{DynamicResource Color.InputBackground}"/>
  <SolidColorBrush x:Key="Brush.InputBorder" Color="{DynamicResource Color.InputBorder}"/>
  <SolidColorBrush x:Key="Brush.InputFocus" Color="{DynamicResource Color.InputFocus}"/>
  
  <!-- Gradient Brushes -->
  <LinearGradientBrush x:Key="Brush.PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
    <GradientStop Color="{DynamicResource Color.Primary}" Offset="0"/>
    <GradientStop Color="{DynamicResource Color.Secondary}" Offset="1"/>
  </LinearGradientBrush>
  
  <!-- Transparent Brushes -->
  <SolidColorBrush x:Key="Brush.Transparent" Color="Transparent"/>
  <SolidColorBrush x:Key="Brush.SemiTransparent" Color="#80000000"/>
</ResourceDictionary>