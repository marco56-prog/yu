<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Window Styles - آمنة ومتوافقة مع جميع خصائص النوافذ -->
  
  <!-- Standard Window Style -->
  <Style x:Key="Window.Standard" TargetType="Window">
    <Setter Property="Background" Value="{DynamicResource Brush.Background}"/>
    <Setter Property="FontFamily" Value="{StaticResource App.Font}"/>
    <Setter Property="FontSize" Value="{StaticResource FontSize.Normal}"/>
    <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="UseLayoutRounding" Value="True"/>
    <Setter Property="FlowDirection" Value="RightToLeft"/>
    <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
    <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
  </Style>
  
  <!-- StandardWindow Alias for backwards compatibility -->
  <Style x:Key="StandardWindow" TargetType="Window" BasedOn="{StaticResource Window.Standard}"/>
  
  <!-- Default Window Style (implicit) -->
  <Style TargetType="Window" BasedOn="{StaticResource Window.Standard}"/>
  
  <!-- Dialog Window Style -->
  <Style x:Key="Window.Dialog" TargetType="Window" BasedOn="{StaticResource Window.Standard}">
    <Setter Property="Background" Value="{DynamicResource Brush.Surface}"/>
    <Setter Property="SizeToContent" Value="WidthAndHeight"/>
    <Setter Property="ResizeMode" Value="NoResize"/>
  </Style>
  
  <!-- Main Window Style -->
  <Style x:Key="Window.Main" TargetType="Window" BasedOn="{StaticResource Window.Standard}">
    <Setter Property="MinWidth" Value="800"/>
    <Setter Property="MinHeight" Value="600"/>
  </Style>
  
  <!-- Borderless Window Style -->
  <Style x:Key="Window.Borderless" TargetType="Window" BasedOn="{StaticResource Window.Standard}">
    <Setter Property="WindowStyle" Value="None"/>
    <Setter Property="AllowsTransparency" Value="True"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Window">
          <Border Background="{TemplateBinding Background}" 
                  CornerRadius="{StaticResource Radius.M}"
                  BorderBrush="{DynamicResource Brush.Border}"
                  BorderThickness="{StaticResource Border.Thin}">
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>
              
              <!-- Title Bar -->
              <Border Grid.Row="0" 
                      Background="{DynamicResource Brush.Primary}"
                      CornerRadius="6,6,0,0">
                <Grid>
                  <TextBlock Text="{TemplateBinding Title}" 
                             Foreground="{DynamicResource Brush.TextOnPrimary}"
                             VerticalAlignment="Center"
                             Margin="{StaticResource Space.M}"/>
                </Grid>
              </Border>
              
              <!-- Content -->
              <ContentPresenter Grid.Row="1" Margin="{StaticResource Space.S}"/>
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>