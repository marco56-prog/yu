<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
  <!-- Typography Resources -->
  <FontFamily x:Key="App.Font">Segoe UI, Tahoma, Arial</FontFamily>
  <FontFamily x:Key="App.Font.Mono">Consolas, Courier New</FontFamily>
  
  <!-- Font Sizes -->
  <system:Double x:Key="FontSize.XSmall">10</system:Double>
  <system:Double x:Key="FontSize.Small">12</system:Double>
  <system:Double x:Key="FontSize.Normal">14</system:Double>
  <system:Double x:Key="FontSize.Medium">16</system:Double>
  <system:Double x:Key="FontSize.Large">18</system:Double>
  <system:Double x:Key="FontSize.XLarge">20</system:Double>
  <system:Double x:Key="FontSize.XXLarge">24</system:Double>
  
  <!-- Alias Font Sizes for backward compatibility -->
  <system:Double x:Key="FontSizeCaption">10</system:Double>
  <system:Double x:Key="FontSizeBody">14</system:Double>
  <system:Double x:Key="FontSizeHeading">18</system:Double>
  <system:Double x:Key="FontSizeDisplay">24</system:Double>
  
  <!-- Font Weights -->
  <FontWeight x:Key="FontWeight.Light">Light</FontWeight>
  <FontWeight x:Key="FontWeight.Normal">Normal</FontWeight>
  <FontWeight x:Key="FontWeight.SemiBold">SemiBold</FontWeight>
  <FontWeight x:Key="FontWeight.Bold">Bold</FontWeight>
</ResourceDictionary>