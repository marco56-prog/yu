<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Data Templates للقوائم الجانبية -->
    <DataTemplate x:Key="SidebarMenuItemTemplate">
        <Button Style="{DynamicResource SidebarButton}" Command="{Binding Command}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </DataTemplate>
    
    <!-- Data Template لكروت لوحة التحكم -->
    <DataTemplate x:Key="DashboardCardTemplate">
        <Border Style="{DynamicResource DashboardCard}" ToolTip="{Binding Tooltip}">
            <StackPanel>
                <TextBlock Text="{Binding Icon}" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" HorizontalAlignment="Center" 
                          Margin="0,0,0,4" FontSize="12"/>
                <TextBlock Text="{Binding Value}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" 
                          Foreground="{Binding ValueColor}"/>
                <TextBlock Text="{Binding Subtitle}" FontSize="10" HorizontalAlignment="Center" 
                          Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
    </DataTemplate>
    
    <!-- Data Template للإشعارات -->
    <DataTemplate x:Key="NotificationItemTemplate">
        <Border Style="{DynamicResource NotificationItemStyle}" Margin="0,0,10,0" Width="250">
            <StackPanel>
                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="12"/>
                <TextBlock Text="{Binding Message}" FontSize="11" TextWrapping="Wrap" Margin="0,5,0,0"/>
                <TextBlock Text="{Binding CreatedDate, StringFormat=yyyy-MM-dd HH:mm}" FontSize="10" 
                          Foreground="{DynamicResource MutedBrush}" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </DataTemplate>
    
    <!-- Data Template للعمليات السريعة -->
    <DataTemplate x:Key="QuickActionTemplate">
        <Button Style="{DynamicResource QuickActionButton}" 
                ToolTip="{Binding Tooltip}" 
                Command="{Binding Command}" 
                CommandParameter="{Binding CommandParameter}">
            <StackPanel>
                <TextBlock Text="{Binding Icon}" FontSize="24" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
            </StackPanel>
        </Button>
    </DataTemplate>
    
</ResourceDictionary>