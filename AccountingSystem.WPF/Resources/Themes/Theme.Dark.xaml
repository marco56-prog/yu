<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Dark Theme Colors - يعيد تعريف الألوان للثيم المظلم -->
  
  <!-- Primary Colors (نفس الألوان الأساسية) -->
  <Color x:Key="Color.Primary">#FF3B82F6</Color>
  <Color x:Key="Color.PrimaryLight">#FF93C5FD</Color>
  <Color x:Key="Color.PrimaryDark">#FF1E40AF</Color>
  <Color x:Key="Color.Secondary">#FF6366F1</Color>
  <Color x:Key="Color.Accent">#FF10B981</Color>
  <Color x:Key="Color.Success">#FF22C55E</Color>
  <Color x:Key="Color.Warning">#FFFBBF24</Color>
  <Color x:Key="Color.Danger">#FFEF4444</Color>
  <Color x:Key="Color.Info">#FF0EA5E9</Color>
  
  <!-- Dark Theme Surface Colors -->
  <Color x:Key="Color.Surface">#FF1E293B</Color>
  <Color x:Key="Color.Background">#FF0F172A</Color>
  <Color x:Key="Color.Card">#FF334155</Color>
  
  <!-- Dark Theme Border Colors -->
  <Color x:Key="Color.Border">#FF475569</Color>
  <Color x:Key="Color.Divider">#FF64748B</Color>
  
  <!-- Dark Theme Text Colors -->
  <Color x:Key="Color.TextPrimary">#FFF1F5F9</Color>
  <Color x:Key="Color.TextSecondary">#FFCBD5E1</Color>
  <Color x:Key="Color.TextMuted">#FF94A3B8</Color>
  <Color x:Key="Color.TextOnPrimary">#FFFFFF</Color>
  
  <!-- Dark Theme Input Colors -->
  <Color x:Key="Color.InputBackground">#FF334155</Color>
  <Color x:Key="Color.InputBorder">#FF475569</Color>
  <Color x:Key="Color.InputFocus">#FF3B82F6</Color>
</ResourceDictionary>