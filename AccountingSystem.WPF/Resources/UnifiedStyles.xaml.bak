<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- =============================================== -->
    <!-- نظام الألوان الموحد للتطبيق -->
    <!-- =============================================== -->
    
    <!-- الألوان الأساسية -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="PrimaryDarkColor" Color="#1E40AF"/>
    <SolidColorBrush x:Key="PrimaryLightColor" Color="#3B82F6"/>
    
    <!-- الألوان الثانوية -->
    <SolidColorBrush x:Key="SecondaryColor" Color="#64748B"/>
    <SolidColorBrush x:Key="SecondaryLightColor" Color="#94A3B8"/>
    <SolidColorBrush x:Key="SecondaryDarkColor" Color="#475569"/>
    
    <!-- ألوان الحالة -->
    <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
    <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
    <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
    <SolidColorBrush x:Key="InfoColor" Color="#06B6D4"/>

    <!-- أسماء بديلة للفرش -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#06B6D4"/>
    
    <!-- ألوان الخلفية -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="SurfaceColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    
    <!-- ألوان النصوص -->
    <SolidColorBrush x:Key="TextPrimaryColor" Color="#1F2937"/>
    <SolidColorBrush x:Key="TextSecondaryColor" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextMutedColor" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="TextOnPrimaryColor" Color="#FFFFFF"/>

    <!-- توافق مع الأسماء القديمة للفرش -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="TextBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="MutedBrush" Color="#9CA3AF"/>
    
    <!-- موارد إضافية مطلوبة -->
    <SolidColorBrush x:Key="AccentBrush" Color="#10B981"/>
    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextColor" Color="#1F2937"/>
    <SolidColorBrush x:Key="AccentColor" Color="#10B981"/>
    
    <!-- ألوان الحدود -->
    <SolidColorBrush x:Key="BorderFocusColor" Color="#3B82F6"/>
    <SolidColorBrush x:Key="BorderErrorColor" Color="#EF4444"/>
    
    <!-- ألوان الظلال -->
    <Color x:Key="ShadowColor">#40000000</Color>
    <Color x:Key="LightShadowColor">#20000000</Color>
    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}"/>
    <SolidColorBrush x:Key="LightShadowBrush" Color="{StaticResource LightShadowColor}"/>

    <!-- =============================================== -->
    <!-- متغيرات التصميم -->
    <!-- =============================================== -->
    
    <!-- أحجام الخطوط -->
    <sys:Double x:Key="FontSizeXSmall">9</sys:Double>
    <sys:Double x:Key="FontSizeSmall">10</sys:Double>
    <sys:Double x:Key="FontSizeNormal">12</sys:Double>
    <sys:Double x:Key="FontSizeMedium">14</sys:Double>
    <sys:Double x:Key="FontSizeLarge">16</sys:Double>
    <sys:Double x:Key="FontSizeXLarge">18</sys:Double>
    <sys:Double x:Key="FontSizeHeading">20</sys:Double>
    <sys:Double x:Key="FontSizeTitle">28</sys:Double>
    
    <!-- المسافات -->
    <Thickness x:Key="SpacingXSmall">1</Thickness>
    <Thickness x:Key="SpacingSmall">2</Thickness>
    <Thickness x:Key="SpacingNormal">6</Thickness>
    <Thickness x:Key="SpacingMedium">8</Thickness>
    <Thickness x:Key="SpacingLarge">12</Thickness>  
    <Thickness x:Key="SpacingXLarge">16</Thickness>
    
    <!-- نصف أقطار الزوايا -->
    <CornerRadius x:Key="CornerRadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusNormal">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">12</CornerRadius>
    <CornerRadius x:Key="CornerRadiusXLarge">16</CornerRadius>

    <!-- =============================================== -->
    <!-- تأثيرات الظل -->
    <!-- =============================================== -->
    
    <DropShadowEffect x:Key="LightShadow" Color="{StaticResource LightShadowColor}" 
                      BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
    <DropShadowEffect x:Key="NormalShadow" Color="{StaticResource ShadowColor}" 
                      BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
    <DropShadowEffect x:Key="DeepShadow" Color="{StaticResource ShadowColor}" 
                      BlurRadius="16" ShadowDepth="4" Opacity="0.2"/>

    <!-- =============================================== -->
    <!-- أنماط الأزرار -->
    <!-- =============================================== -->
    
    <!-- الزر الأساسي -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryColor}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="{StaticResource SpacingSmall}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect" Value="{StaticResource LightShadow}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CornerRadiusNormal}"
                            Effect="{TemplateBinding Effect}">
                        <ContentPresenter x:Name="contentPresenter"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryDarkColor}"/>
                            <Setter Property="Effect" Value="{StaticResource NormalShadow}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryDarkColor}"/>
                            <Setter Property="Effect" Value="{StaticResource LightShadow}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource TextMutedColor}"/>
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- الزر الثانوي -->
    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <!-- زر النجاح -->
    <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
    </Style>
    
    <!-- زر التحذير -->
    <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="{StaticResource WarningColor}"/>
    </Style>
    
    <!-- زر الخطر -->
    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="{StaticResource DangerColor}"/>
    </Style>
    
    <!-- زر المعلومات -->
    <Style x:Key="InfoButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="{StaticResource InfoColor}"/>
    </Style>
    
    <!-- زر نقطة البيع -->
    <Style x:Key="POSButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Height" Value="50"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
        <Setter Property="Margin" Value="{StaticResource SpacingSmall}"/>
    </Style>

    <!-- أنماط إضافية للنوافذ -->
    <Style x:Key="ModernButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    
    <!-- أنماط أزرار نقاط البيع -->
    <Style x:Key="PosButtonStyle" TargetType="Button" BasedOn="{StaticResource POSButton}"/>
    <Style x:Key="ProductButtonStyle" TargetType="Button" BasedOn="{StaticResource POSButton}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
    <!-- أنماط أزرار إضافية -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButton}"/>

    <!-- =============================================== -->
    <!-- أنماط حقول الإدخال -->
    <!-- =============================================== -->
    
    <!-- مربع النص -->
    <Style x:Key="ModernTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource SpacingSmall}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CornerRadiusNormal}">
                        <ScrollViewer x:Name="PART_ContentHost" Focusable="False"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"
                                      Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BorderFocusColor}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource BackgroundColor}"/>
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- مربع النص الثانوي -->
    <Style x:Key="ModernTextBoxSecondary" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
        <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
    </Style>

    <!-- نمط مربع النص المتقدم -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}"/>

    <!-- أنماط أزرار إضافية مفقودة -->
    <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="BorderBrush" Value="#45A049"/>
    </Style>
    
    <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="#F44336"/>
        <Setter Property="BorderBrush" Value="#D32F2F"/>
    </Style>

    <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="#FF9800"/>
        <Setter Property="BorderBrush" Value="#F57C00"/>
    </Style>
    
    <!-- قائمة منسدلة -->
    <Style x:Key="ModernComboBox" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource SpacingSmall}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- =============================================== -->
    <!-- أنماط البطاقات والحاويات -->
    <!-- =============================================== -->
    
    <!-- بطاقة عادية -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusNormal}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingMedium}"/>
        <Setter Property="Effect" Value="{StaticResource LightShadow}"/>
    </Style>
    
    <!-- بطاقة مرفوعة -->
    <Style x:Key="ElevatedCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="Effect" Value="{StaticResource NormalShadow}"/>
    </Style>
    
    <!-- بطاقة الداشبورد -->
    <Style x:Key="DashboardCard" TargetType="Border" BasedOn="{StaticResource ElevatedCard}">
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusLarge}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingLarge}"/>
    </Style>
    
    <!-- بطاقة المنتج -->
    <Style x:Key="ProductCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Effect" Value="{StaticResource NormalShadow}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- =============================================== -->
    <!-- أنماط النصوص -->
    <!-- =============================================== -->
    
    <!-- العنوان الرئيسي -->
    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeTitle}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>
    
    <!-- العنوان الفرعي -->
    <Style x:Key="HeadingText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeHeading}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>
    
    <!-- النص العادي -->
    <Style x:Key="BodyText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>
    
    <!-- النص الثانوي -->
    <Style x:Key="SecondaryText" TargetType="TextBlock" BasedOn="{StaticResource BodyText}">
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
    </Style>
    
    <!-- النص المكتوم -->
    <Style x:Key="MutedText" TargetType="TextBlock" BasedOn="{StaticResource BodyText}">
        <Setter Property="Foreground" Value="{StaticResource TextMutedColor}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
    </Style>
    
    <!-- نص القيم الإحصائية -->
    <Style x:Key="MetricText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeHeading}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
    </Style>

    <!-- =============================================== -->
    <!-- أنماط الجداول والقوائم -->
    <!-- =============================================== -->
    
    <!-- الجدول -->
    <Style x:Key="ModernDataGrid" TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
    </Style>
    
    <!-- رأس الجدول -->
    <Style x:Key="DataGridColumnHeader" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="{StaticResource SpacingMedium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
    </Style>
    
    <!-- صف الجدول -->
    <Style x:Key="DataGridRow" TargetType="DataGridRow">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryColor}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- =============================================== -->
    <!-- أنماط النوافذ والحوارات -->
    <!-- =============================================== -->
    
    <!-- النافذة الرئيسية -->
    <Style x:Key="MainWindow" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
        <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FlowDirection" Value="RightToLeft"/>
    </Style>
    
    <!-- نافذة الحوار -->
    <Style x:Key="DialogWindow" TargetType="Window" BasedOn="{StaticResource MainWindow}">
        <Setter Property="WindowStartupLocation" Value="CenterOwner"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
    </Style>

    <!-- =============================================== -->
    <!-- أنماط القوائم والتنقل -->
    <!-- =============================================== -->
    
    <!-- شريط القائمة -->
    <Style x:Key="ModernMenu" TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
    </Style>
    
    <!-- عنصر القائمة -->
    <Style x:Key="ModernMenuItem" TargetType="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingMedium}"/>
    </Style>
    
    <!-- الشريط الجانبي -->
    <Style x:Key="SidebarPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>
    
    <!-- بطاقة الملخص -->
    <Style x:Key="SummaryCardStyle" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="Background" Value="{StaticResource CardColor}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingLarge}"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <!-- نمط البطاقة العام -->
    <Style x:Key="CardStyle" TargetType="Border" BasedOn="{StaticResource Card}"/>
    
    <!-- أنماط الإشعارات -->
    <Style x:Key="NotificationItemStyle" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusNormal}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingMedium}"/>
        <Setter Property="Margin" Value="0,2"/>
    </Style>
    
    <Style x:Key="UnreadNotificationStyle" TargetType="Border" BasedOn="{StaticResource NotificationItemStyle}">
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryDarkColor}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- أنماط نصوص التقارير -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource HeadingText}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    <!-- Compatibility aliases for legacy keys -->
    <!-- Some views reference HeaderText or HeaderTextBlockStyle; map them to the new centralized styles -->
    <Style x:Key="HeaderText" TargetType="TextBlock" BasedOn="{StaticResource HeadingText}"/>
    <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource HeaderTextStyle}"/>
    
    <Style x:Key="ValueTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyText}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
    </Style>

    <!-- أنماط الجداول -->
    <Style x:Key="ModernDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource ModernDataGrid}"/>

    <!-- زر الشريط الجانبي -->
    <Style x:Key="SidebarButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="{StaticResource SpacingSmall}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource CornerRadiusSmall}"
                            Margin="4,2">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource BackgroundColor}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource BorderColor}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =============================================== -->
    <!-- أنماط أشرطة التقدم والحالة -->
    <!-- =============================================== -->
    
    <!-- شريط التقدم -->
    <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
        <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="3">
                        <Grid>
                            <Border x:Name="PART_Track" Background="{TemplateBinding Background}"/>
                            <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}"
                                    HorizontalAlignment="Left"
                                    CornerRadius="3"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- شريط الحالة -->
    <Style x:Key="ModernStatusBar" TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
    </Style>

    <!-- =============================================== -->
    <!-- أنماط متنوعة -->
    <!-- =============================================== -->
    
    <!-- الفاصل -->
    <Style x:Key="ModernSeparator" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource BorderColor}"/>
        <Setter Property="Margin" Value="{StaticResource SpacingNormal}"/>
    </Style>
    
    <!-- مربع الاختيار -->
    <Style x:Key="ModernCheckBox" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingSmall}"/>
    </Style>
    
    <!-- زر الخيار -->
    <Style x:Key="ModernRadioButton" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingSmall}"/>
    </Style>

    <!-- =============================================== -->
    <!-- أنماط التبويبات -->
    <!-- =============================================== -->
    
    <Style x:Key="ModernTabControl" TargetType="TabControl">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
    </Style>
    
    <Style x:Key="ModernTabItem" TargetType="TabItem">
        <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingMedium}"/>
        <Setter Property="Margin" Value="2,0"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- =============================================== -->
    <!-- أنماط الموسع والتوسع -->
    <!-- =============================================== -->
    
    <Style x:Key="ModernExpander" TargetType="Expander">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="Margin" Value="{StaticResource SpacingSmall}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Expander">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CornerRadiusNormal}"
                            Margin="{TemplateBinding Margin}">
                        <DockPanel>
                            <Border DockPanel.Dock="Top" 
                                    Background="{StaticResource BackgroundColor}"
                                    CornerRadius="8,8,0,0"
                                    Padding="{StaticResource SpacingMedium}">
                                <ToggleButton x:Name="HeaderSite" 
                                              Style="{x:Null}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="{TemplateBinding Foreground}"
                                              FontWeight="{TemplateBinding FontWeight}"
                                              FontSize="{TemplateBinding FontSize}"
                                              HorizontalAlignment="Stretch"
                                              HorizontalContentAlignment="Left"
                                              IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                              Content="{TemplateBinding Header}"
                                              Cursor="Hand"/>
                            </Border>
                            <ContentPresenter x:Name="ExpandSite"
                                              DockPanel.Dock="Bottom"
                                              Visibility="Collapsed"
                                              Margin="{StaticResource SpacingNormal}"/>
                        </DockPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- أزرار الأعمال السريعة -->
    <Style x:Key="QuickActionButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource SpacingMedium}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Height" Value="64"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CornerRadiusNormal}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            <Setter Property="Effect" Value="{StaticResource NormalShadow}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>