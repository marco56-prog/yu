<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:AccountingSystem.WPF.Converters"
                    xmlns:notificationConverters="clr-namespace:AccountingSystem.WPF.Converters">

    <!-- المحولات -->
    <converters:IconKeyToVisualConverter x:Key="IconKeyToVisualConverter"/>
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <notificationConverters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

    <!-- الألوان الأساسية -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#16C60C"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="#323130"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="#FFFFFF"/>

    <!-- فرشاة القائمة الجانبية -->
    <SolidColorBrush x:Key="SidebarBrush" Color="#2D3748"/>
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="#4A5568"/>
    <SolidColorBrush x:Key="SidebarTextBrush" Color="#FFFFFF"/>

    <!-- نمط زر التنقل الجانبي -->
    <Style x:Key="SideNavButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource SidebarTextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Segoe UI, Tahoma"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder" 
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Margin="4,1">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource SidebarHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- نمط زر المجموعة -->
    <Style x:Key="SideNavGroupButton" TargetType="Button" BasedOn="{StaticResource SideNavButton}">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#E2E8F0"/>
    </Style>

    <!-- نمط الأزرار العادية -->
    <Style x:Key="OutlinedButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontFamily" Value="Segoe UI, Tahoma"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource OnPrimaryBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- تخطيط النافذة الأساسية -->
    <Style x:Key="StandardWindow" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI, Tahoma"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FlowDirection" Value="RightToLeft"/>
    </Style>

    <!-- تخطيط شريط العنوان -->
    <Style x:Key="TitleBarLayout" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Height" Value="60"/>
    </Style>

</ResourceDictionary>