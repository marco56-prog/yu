<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- حجم الخط 90% -->
    <FontFamily x:Key="AppFontFamily">Segoe UI, Tahoma, Arial</FontFamily>
    <sys:Double x:Key="FontSizeXS">10</sys:Double>
    <sys:Double x:Key="FontSizeSmall">11</sys:Double>
    <sys:Double x:Key="FontSizeNormal">12</sys:Double>
    <sys:Double x:Key="FontSizeLarge">13</sys:Double>
    <sys:Double x:Key="FontSizeXL">15</sys:Double>
</ResourceDictionary>