<UserControl x:Class="AccountingSystem.WPF.UserControls.ThemeToggleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="LightThemeButton" 
                Content="☀️ فاتح" 
                Style="{StaticResource Btn.Secondary}"
                Click="LightThemeButton_Click"
                ToolTip="تطبيق الثيم الفاتح"
                Margin="0,0,8,0"/>
        
        <Button x:Name="DarkThemeButton" 
                Content="🌙 داكن" 
                Style="{StaticResource Btn.Secondary}"
                Click="DarkThemeButton_Click"
                ToolTip="تطبيق الثيم الداكن"
                Margin="0,0,8,0"/>
        
        <Button x:Name="ToggleThemeButton" 
                Content="🔄 تبديل" 
                Style="{StaticResource Btn.Primary}"
                Click="ToggleThemeButton_Click"
                ToolTip="تبديل بين الثيمات"/>
    </StackPanel>
</UserControl>