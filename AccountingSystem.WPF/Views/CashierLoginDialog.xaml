<Window x:Class="AccountingSystem.WPF.Views.CashierLoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تسجيل دخول الكاشير" Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        Background="{StaticResource MasterBackgroundBrush}">

    <Grid>
        <!-- Background -->
        <Border Background="{StaticResource MasterSurfaceBrush}" CornerRadius="15" Margin="20" 
                BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="{StaticResource ShadowColor}" Direction="270" ShadowDepth="5" 
                                  Opacity="0.1" BlurRadius="15"/>
            </Border.Effect>
        </Border>

        <!-- Content -->
        <StackPanel Margin="50" VerticalAlignment="Center">
            <!-- Logo/Icon -->
            <Border Background="{StaticResource MasterPrimaryBrush}" Width="80" Height="80" CornerRadius="40" 
                    HorizontalAlignment="Center" Margin="0,0,0,30">
                <Path Fill="White" Width="40" Height="40" 
                      Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                      VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <!-- Title -->
            <TextBlock Text="تسجيل دخول الكاشير" 
                      FontSize="{StaticResource FontSizeTitle}" FontWeight="Bold" 
                      Foreground="{StaticResource TextPrimaryColor}" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,30"/>

            <!-- Username -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="اسم المستخدم" FontWeight="Bold" 
                          Foreground="{StaticResource TextPrimaryColor}" Margin="0,0,0,8"/>
                <TextBox Name="txtUsername" Height="45" FontSize="{StaticResource FontSizeMedium}" 
                        BorderBrush="{StaticResource BorderColor}" BorderThickness="2" 
                        Padding="15,12" VerticalContentAlignment="Center"
                        KeyDown="txtUsername_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}" 
                                               BorderThickness="{TemplateBinding BorderThickness}" 
                                               CornerRadius="8">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                         VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>

            <!-- Password -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="كلمة المرور" FontWeight="Bold" 
                          Foreground="{StaticResource TextPrimaryColor}" Margin="0,0,0,8"/>
                <PasswordBox Name="txtPassword" Height="45" FontSize="{StaticResource FontSizeMedium}" 
                            BorderBrush="{StaticResource BorderColor}" BorderThickness="2" 
                            Padding="15,12" VerticalContentAlignment="Center"
                            KeyDown="txtPassword_KeyDown">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}" 
                                               BorderThickness="{TemplateBinding BorderThickness}" 
                                               CornerRadius="8">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                         VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnLogin" Content="تسجيل دخول" Width="120" Height="45" 
                       Style="{StaticResource SuccessButton}" 
                       FontSize="{StaticResource FontSizeMedium}" FontWeight="Bold" 
                       BorderThickness="0" 
                       Margin="0,0,15,0" 
                       Click="btnLogin_Click"/>
                
                <Button Name="btnCancel" Content="إلغاء" Width="100" Height="45" 
                       Style="{StaticResource DangerButton}" 
                       FontSize="{StaticResource FontSizeMedium}" FontWeight="Bold" 
                       BorderThickness="0" 
                       Margin="15,0,0,0" 
                       Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>

    <Window.Resources>
        <Style TargetType="Button" x:Key="ModernButtonStyle">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="8" 
                               BorderBrush="{TemplateBinding BorderBrush}" 
                               BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
