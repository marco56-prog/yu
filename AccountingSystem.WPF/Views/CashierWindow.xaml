<Window x:Class="AccountingSystem.WPF.Views.CashierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="واجهة الكاشير - نقطة البيع" 
        Height="900" Width="1600"
        Style="{StaticResource StandardWindow}"
        WindowState="Maximized">

    <!-- Centralized styles are used from Resources/UnifiedStyles.xaml. Local brush/style definitions removed to prevent duplicate resource keys. -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- المنطقة الرئيسية للمنتجات -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- شريط البحث والفلاتر -->
            <Border Grid.Row="0" Style="{StaticResource StandardCard}" Margin="{StaticResource MediumMargin}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource SearchBar}">
                        <TextBox Name="SearchBox" 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="16"
                                 VerticalContentAlignment="Center">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="10" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1">
                                        <Grid>
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                          Padding="{TemplateBinding Padding}"
                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            <TextBlock Text="🔍 البحث عن منتج..."
                                                       Foreground="#64748B"
                                                       Padding="15,0"
                                                       VerticalAlignment="Center"
                                                       IsHitTestVisible="False">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </Border>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0,0,0">
                        <Button Style="{StaticResource POSButton}" Width="100" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📱" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="باركود"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- فئات المنتجات -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource POSButton}" Background="{StaticResource PrimaryBrush}">
                            <StackPanel>
                                <TextBlock Text="🍎" FontSize="20"/>
                                <TextBlock Text="مواد غذائية"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource POSButton}">
                            <StackPanel>
                                <TextBlock Text="🧴" FontSize="20"/>
                                <TextBlock Text="منظفات"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource POSButton}">
                            <StackPanel>
                                <TextBlock Text="🍬" FontSize="20"/>
                                <TextBlock Text="حلويات"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource POSButton}">
                            <StackPanel>
                                <TextBlock Text="🥤" FontSize="20"/>
                                <TextBlock Text="مشروبات"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource POSButton}">
                            <StackPanel>
                                <TextBlock Text="📱" FontSize="20"/>
                                <TextBlock Text="إلكترونيات"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource POSButton}">
                            <StackPanel>
                                <TextBlock Text="🧸" FontSize="20"/>
                                <TextBlock Text="ألعاب"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- شبكة المنتجات -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <ScrollViewer>
                    <UniformGrid Columns="6" Name="ProductsGrid">
                        <!-- منتجات نموذجية -->
                        <Button Style="{StaticResource ProductButtonStyle}" Content="أرز أبو كاس"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="سكر"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="زيت عباد الشمس"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="شاي ليبتون"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="قهوة نسكافيه"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="لبن جهينة"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="خبز تركي"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="جبن رومي"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="بيض أحمر"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="طحينة"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="عسل أسود"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="مكرونة"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="تونة"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="صلصة طماطم"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="ملح"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="فلفل أسود"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="كمون"/>
                        <Button Style="{StaticResource ProductButtonStyle}" Content="كركم"/>
                    </UniformGrid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- منطقة الفاتورة والدفع -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- معلومات الفاتورة -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="💳 الفاتورة الحالية" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="رقم الفاتورة:" Foreground="#94A3B8"/>
                            <TextBlock Text="INV-2024-001" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                            <TextBlock Text="التاريخ:" Foreground="#94A3B8"/>
                            <TextBlock Text="15/12/2024" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- قائمة المنتجات في الفاتورة -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="🛒 منتجات الفاتورة" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,10"/>

                    <ScrollViewer Grid.Row="1" Name="InvoiceItems">
                        <StackPanel>
                            <!-- عنصر نموذجي في الفاتورة -->
                            <Border Background="#334155" 
                                    CornerRadius="8" 
                                    Padding="10" 
                                    Margin="0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="أرز أبو كاس" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextBrush}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="الكمية: 2" 
                                                       FontSize="12" 
                                                       Foreground="#94A3B8"/>
                                            <TextBlock Text="×" 
                                                       FontSize="12" 
                                                       Foreground="#94A3B8" 
                                                       Margin="5,0"/>
                                            <TextBlock Text="25.00 ج.م" 
                                                       FontSize="12" 
                                                       Foreground="#94A3B8"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="50.00 ج.م" 
                                                   FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentBrush}"
                                                   HorizontalAlignment="Left"/>
                                        <Button Content="❌" 
                                                Width="25" 
                                                Height="25" 
                                                FontSize="10"
                                                Background="{StaticResource DangerBrush}"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Background="#334155" 
                                    CornerRadius="8" 
                                    Padding="10" 
                                    Margin="0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="شاي ليبتون" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextBrush}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="الكمية: 1" 
                                                       FontSize="12" 
                                                       Foreground="#94A3B8"/>
                                            <TextBlock Text="×" 
                                                       FontSize="12" 
                                                       Foreground="#94A3B8" 
                                                       Margin="5,0"/>
                                            <TextBlock Text="15.00 ج.م" 
                                                       FontSize="12" 
                                                       Foreground="#94A3B8"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="15.00 ج.م" 
                                                   FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentBrush}"
                                                   HorizontalAlignment="Left"/>
                                        <Button Content="❌" 
                                                Width="25" 
                                                Height="25" 
                                                FontSize="10"
                                                Background="{StaticResource DangerBrush}"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- منطقة الدفع والإجماليات -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <!-- الإجماليات -->
                    <Border Background="#1E40AF" 
                            CornerRadius="12" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,5">
                                <TextBlock Text="المجموع الفرعي:" 
                                           Foreground="White" 
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="65.00 ج.م" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Left"/>
                            </Grid>

                            <Grid Grid.Row="1" Margin="0,0,0,5">
                                <TextBlock Text="الضريبة (14%):" 
                                           Foreground="White" 
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="9.10 ج.م" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Left"/>
                            </Grid>

                            <Separator Grid.Row="2" Background="White" Opacity="0.3" Margin="0,5"/>

                            <Grid Grid.Row="3" Margin="0,5,0,0">
                                <TextBlock Text="الإجمالي:" 
                                           Foreground="White" 
                                           FontSize="18"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="74.10 ج.م" 
                                           Foreground="{StaticResource AccentBrush}" 
                                           FontSize="22"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Left"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- أزرار الدفع -->
                    <UniformGrid Rows="2" Columns="2">
                        <Button Background="{StaticResource AccentBrush}" 
                                Foreground="White"
                                FontSize="16" 
                                FontWeight="Bold"
                                Height="60"
                                Margin="3"
                                Style="{StaticResource POSButton}">
                            <StackPanel>
                                <TextBlock Text="💵" FontSize="20"/>
                                <TextBlock Text="نقداً"/>
                            </StackPanel>
                        </Button>

                        <Button Background="#8B5CF6" 
                                Foreground="White"
                                FontSize="16" 
                                FontWeight="Bold"
                                Height="60"
                                Margin="3"
                                Style="{StaticResource POSButton}">
                            <StackPanel>
                                <TextBlock Text="💳" FontSize="20"/>
                                <TextBlock Text="بطاقة"/>
                            </StackPanel>
                        </Button>

                        <Button Background="{StaticResource WarningBrush}" 
                                Foreground="White"
                                FontSize="14" 
                                FontWeight="Bold"
                                Height="60"
                                Margin="3"
                                Style="{StaticResource POSButton}">
                            <StackPanel>
                                <TextBlock Text="⏸️" FontSize="18"/>
                                <TextBlock Text="تعليق"/>
                            </StackPanel>
                        </Button>

                        <Button Background="{StaticResource DangerBrush}" 
                                Foreground="White"
                                FontSize="14" 
                                FontWeight="Bold"
                                Height="60"
                                Margin="3"
                                Style="{StaticResource POSButton}"
                                Click="CancelInvoice_Click">
                            <StackPanel>
                                <TextBlock Text="🗑️" FontSize="18"/>
                                <TextBlock Text="إلغاء"/>
                            </StackPanel>
                        </Button>
                    </UniformGrid>

                    <!-- أزرار إضافية -->
                    <UniformGrid Columns="2" Margin="0,10,0,0">
                        <Button Style="{StaticResource POSButton}" 
                                Background="#475569"
                                Height="45"
                                Margin="3">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎁" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="خصم"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource POSButton}" 
                                Background="#475569"
                                Height="45"
                                Margin="3"
                                Click="Close_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="❌" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="إغلاق"/>
                            </StackPanel>
                        </Button>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
