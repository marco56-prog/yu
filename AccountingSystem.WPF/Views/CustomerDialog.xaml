<Window x:Class="AccountingSystem.WPF.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إضافة/تعديل عميل" 
        Height="400" Width="500" 
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        FontFamily="Segoe UI, Tahoma"
        FontSize="{StaticResource FontSizeNormal}"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Grid.Row="0" Name="lblTitle" Text="إضافة عميل جديد" 
                   FontSize="{StaticResource FontSizeLarge}" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- النموذج -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- اسم العميل -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم العميل:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="0" Grid.Column="1" Name="txtCustomerName" 
                     Height="30" Margin="10,5" VerticalContentAlignment="Center"/>

            <!-- العنوان -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="العنوان:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Name="txtAddress" 
                     Height="30" Margin="10,5" VerticalContentAlignment="Center"/>

            <!-- الهاتف -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="الهاتف:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="2" Grid.Column="1" Name="txtPhone" 
                     Height="30" Margin="10,5" VerticalContentAlignment="Center"/>

            <!-- البريد الإلكتروني -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="البريد الإلكتروني:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="3" Grid.Column="1" Name="txtEmail" 
                     Height="30" Margin="10,5" VerticalContentAlignment="Center"/>

            <!-- الرصيد (للقراءة فقط في التعديل) -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="الرصيد الحالي:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="4" Grid.Column="1" Name="txtBalance" 
                     Height="30" Margin="10,5" VerticalContentAlignment="Center"
                     IsReadOnly="True" Background="{StaticResource MasterBackgroundBrush}"/>

            <!-- نشط -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="نشط:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <CheckBox Grid.Row="5" Grid.Column="1" Name="chkIsActive" 
                      VerticalAlignment="Center" Margin="10,5" IsChecked="True"/>
        </Grid>

        <!-- أزرار التحكم -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Name="btnSave" Content="حفظ" Width="80" Height="35" 
                    Margin="5" Style="{StaticResource SuccessButton}"
                    FontWeight="Bold" Click="btnSave_Click"/>
            <Button Name="btnCancel" Content="إلغاء" Width="80" Height="35" 
                    Margin="5" Style="{StaticResource SecondaryButton}"
                    FontWeight="Bold" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
