<Window x:Class="AccountingSystem.WPF.Views.CustomersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إدارة العملاء" 
        Height="600" Width="900" 
        Style="{StaticResource StandardWindow}"
        WindowState="Maximized">
    
    <Window.Resources>
        <!-- استخدام الأنماط الموحدة -->
        <!-- Use centralized Button styles from Resources/UnifiedStyles.xaml -->
    </Window.Resources>

    <Grid Style="{StaticResource MainWindowLayout}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <Border Grid.Row="0" Style="{StaticResource TitleBarLayout}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{StaticResource CustomersIcon}" 
                           FontSize="24" 
                           VerticalAlignment="Center" 
                           Margin="{StaticResource SmallMargin}"/>
                <TextBlock Text="إدارة العملاء" 
                           Style="{StaticResource HeaderTextBlock}"
                           Foreground="{StaticResource TextOnPrimaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- أزرار التحكم -->
        <Border Grid.Row="1" Style="{StaticResource StandardCard}" Margin="{StaticResource MediumMargin}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- الأزرار -->
                <StackPanel Grid.Column="0" Style="{StaticResource HorizontalButtonGroup}">
                    <Button Name="btnAdd" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="btnAdd_Click">
                        <StackPanel Orientation="Horizontal">
                            <ContentPresenter Content="{StaticResource AddIcon}" Margin="0,0,5,0"/>
                            <TextBlock Text="إضافة عميل جديد"/>
                        </StackPanel>
                    </Button>
                    <Button Name="btnEdit" 
                            Style="{StaticResource SuccessButton}" 
                            Click="btnEdit_Click">
                        <StackPanel Orientation="Horizontal">
                            <ContentPresenter Content="{StaticResource EditIcon}" Margin="0,0,5,0"/>
                            <TextBlock Text="تعديل"/>
                        </StackPanel>
                    </Button>
                    <Button Name="btnDelete" 
                            Style="{StaticResource DangerButton}" 
                            Click="btnDelete_Click">
                        <StackPanel Orientation="Horizontal">
                            <ContentPresenter Content="{StaticResource DeleteIcon}" Margin="0,0,5,0"/>
                            <TextBlock Text="حذف"/>
                        </StackPanel>
                    </Button>
                    <Button Name="btnRefresh" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="btnRefresh_Click">
                        <StackPanel Orientation="Horizontal">
                            <ContentPresenter Content="{StaticResource RefreshIcon}" Margin="0,0,5,0"/>
                            <TextBlock Text="تحديث"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- شريط البحث -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="بحث:" 
                               Style="{StaticResource BodyTextBlock}" 
                               VerticalAlignment="Center" 
                               Margin="{StaticResource SmallMargin}"/>
                    <Border Style="{StaticResource SearchBar}">
                        <TextBox Name="txtSearch" 
                                 Width="200" 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 TextChanged="txtSearch_TextChanged"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- جدول العملاء -->
        <Border Grid.Row="2" Style="{StaticResource TableContainer}">
            <DataGrid Name="dgCustomers" 
                      Style="{StaticResource StandardDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم العميل" Binding="{Binding CustomerId}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="اسم العميل" Binding="{Binding CustomerName}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="العنوان" Binding="{Binding Address}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="الهاتف" Binding="{Binding Phone}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="البريد الإلكتروني" Binding="{Binding Email}" Width="180" IsReadOnly="True"/>
                <DataGridTextColumn Header="الرصيد" Binding="{Binding Balance, StringFormat=N2}" Width="100" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="نشط" Binding="{Binding IsActive}" Width="60" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        </Border>
        
        <!-- شريط الحالة -->
        <Border Grid.Row="3" Style="{StaticResource StatusBarLayout}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Name="lblStatus" 
                           Text="جاهز" 
                           Style="{StaticResource BodyTextBlock}"/>
                           
                <Border Grid.Column="1" 
                        Style="{StaticResource SummaryPill}" 
                        Background="{StaticResource SuccessBrush}"
                        Margin="{StaticResource MediumMargin}">
                    <TextBlock Name="lblTotalBalance" 
                               Text="إجمالي الأرصدة: 0.00 ج.م" 
                               Foreground="{StaticResource TextOnPrimaryBrush}"/>
                </Border>
                
                <Border Grid.Column="2" 
                        Style="{StaticResource SummaryPill}" 
                        Background="{StaticResource InfoBrush}">
                    <TextBlock Name="lblCount" 
                               Text="عدد العملاء: 0" 
                               Foreground="{StaticResource TextOnPrimaryBrush}"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
