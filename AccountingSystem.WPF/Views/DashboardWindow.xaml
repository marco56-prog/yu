<Window x:Class="AccountingSystem.WPF.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="لوحة التحكم الذكية - نظام المحاسبة"
        Height="800" Width="1200"
        MinHeight="700" MinWidth="1100"
        Style="{StaticResource StandardWindow}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- استخدام الأنماط الموحدة بدلاً من المحلية -->
        <Style x:Key="DashboardCardStyle" TargetType="Border" BasedOn="{StaticResource StandardCard}"/>
        <Style x:Key="CardTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource SubHeaderTextBlock}"/>
        <Style x:Key="MetricValueStyle" TargetType="TextBlock" BasedOn="{StaticResource HeaderTextBlock}">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- الشريط العلوي -->
        <Border Background="{DynamicResource PrimaryBrush}" Height="60">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="لوحة التحكم الذكية" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text=" • " FontSize="18" Foreground="#BFE3FF" Margin="8,0"/>
                    <TextBlock Text="{Binding LastUpdated, StringFormat=آخر تحديث: {0:yyyy/MM/dd HH:mm}, FallbackValue=آخر تحديث: —}"
                               Foreground="#E3F2FD" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="تحديث" Style="{StaticResource ActionButtonStyle}"
                            Background="{DynamicResource PrimaryBrush}"
                            Command="{Binding RefreshCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- المحتوى -->
        <Grid Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>

                    <!-- إحصائيات سريعة (بطاقات مرنة) -->
                    <WrapPanel ItemWidth="280" MinWidth="280">
                        <Border Style="{StaticResource DashboardCardStyle}" Width="280">
                            <StackPanel>
                                <TextBlock Text="مبيعات اليوم" Style="{StaticResource CardTitleStyle}"/>
                                <TextBlock Text="{Binding TodaySales, StringFormat={}{0:N2} ج.م}" Style="{StaticResource MetricValueStyle}"/>
                                <TextBlock Text="{Binding TodaySalesNote}" HorizontalAlignment="Center" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource DashboardCardStyle}" Width="280">
                            <StackPanel>
                                <TextBlock Text="فواتير اليوم" Style="{StaticResource CardTitleStyle}"/>
                                <TextBlock Text="{Binding TodayInvoicesCount, StringFormat={}{0:N0}}" Style="{StaticResource MetricValueStyle}" Foreground="#FF9800"/>
                                <TextBlock Text="فاتورة مبيعات" HorizontalAlignment="Center" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource DashboardCardStyle}" Width="280">
                            <StackPanel>
                                <TextBlock Text="تنبيه المخزون" Style="{StaticResource CardTitleStyle}"/>
                                <TextBlock Text="{Binding LowStockCount, StringFormat={}{0:N0}}" Style="{StaticResource MetricValueStyle}" Foreground="#F44336"/>
                                <TextBlock Text="منتج أقل من الحد الأدنى" HorizontalAlignment="Center" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource DashboardCardStyle}" Width="280">
                            <StackPanel>
                                <TextBlock Text="أرباح الشهر" Style="{StaticResource CardTitleStyle}"/>
                                <TextBlock Text="{Binding MonthlyProfit, StringFormat={}{0:N2} ج.م}" Style="{StaticResource MetricValueStyle}" Foreground="#4CAF50"/>
                                <TextBlock Text="{Binding ProfitMarginText}" HorizontalAlignment="Center" Foreground="#666"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <!-- الرسوم (Placeholders جاهزة للربط) -->
                    <WrapPanel ItemWidth="560" Margin="0,10,0,0">
                        <Border Style="{StaticResource DashboardCardStyle}" Width="560">
                            <StackPanel>
                                <TextBlock Text="اتجاه المبيعات" Style="{StaticResource CardTitleStyle}"/>
                                <Border Height="260" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                    <TextBlock Text="LiveCharts/Plot: SalesSeries" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MutedBrush}"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource DashboardCardStyle}" Width="560">
                            <StackPanel>
                                <TextBlock Text="تحليل المخزون" Style="{StaticResource CardTitleStyle}"/>
                                <Border Height="260" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                    <TextBlock Text="LiveCharts/Plot: StockSeries" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MutedBrush}"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <!-- الإجراءات السريعة -->
                    <WrapPanel ItemWidth="280" Margin="0,10,0,0">
                        <Border Style="{StaticResource DashboardCardStyle}" Width="280">
                            <StackPanel>
                                <TextBlock Text="🧾" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <TextBlock Text="فاتورة مبيعات جديدة" Style="{StaticResource CardTitleStyle}" HorizontalAlignment="Center"/>
                                <Button Content="إنشاء فاتورة" Style="{StaticResource ActionButtonStyle}" Command="{Binding CreateInvoiceCommand}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource DashboardCardStyle}" Width="280">
                            <StackPanel>
                                <TextBlock Text="📦" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <TextBlock Text="إدارة المنتجات" Style="{StaticResource CardTitleStyle}" HorizontalAlignment="Center"/>
                                <Button Content="إدارة المخزون" Style="{StaticResource ActionButtonStyle}" Background="{DynamicResource SuccessBrush}"
                                        Command="{Binding ManageInventoryCommand}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource DashboardCardStyle}" Width="280">
                            <StackPanel>
                                <TextBlock Text="👥" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <TextBlock Text="إدارة العملاء" Style="{StaticResource CardTitleStyle}" HorizontalAlignment="Center"/>
                                <Button Content="عرض العملاء" Style="{StaticResource ActionButtonStyle}" Background="{DynamicResource WarningBrush}"
                                        Command="{Binding ViewCustomersCommand}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource DashboardCardStyle}" Width="280">
                            <StackPanel>
                                <TextBlock Text="📊" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <TextBlock Text="التقارير المالية" Style="{StaticResource CardTitleStyle}" HorizontalAlignment="Center"/>
                                <Button Content="عرض التقارير" Style="{StaticResource ActionButtonStyle}" Background="{DynamicResource PrimaryBrush}"
                                        Command="{Binding ShowReportsCommand}"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Overlay التحميل -->
            <Grid Background="{DynamicResource ConsistentShadowBrush}"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  IsHitTestVisible="{Binding IsLoading}">
                <Border Background="White" CornerRadius="10" Padding="20" Width="260" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="جاري تحميل البيانات..." FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <ProgressBar IsIndeterminate="True" Height="10"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
