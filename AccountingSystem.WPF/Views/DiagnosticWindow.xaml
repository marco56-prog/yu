<Window x:Class="AccountingSystem.WPF.Views.DiagnosticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تشخيص النظام المحاسبي" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        FlowDirection="RightToLeft"
        FontFamily="Segoe UI, Tahoma, Arial"
        FontSize="14">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Background" Value="#0D6EFD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0D6EFD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="🔧 تشخيص النظام المحاسبي" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" 
                   Foreground="#198754"/>

        <TextBox x:Name="txtDiagnosticInfo" 
                 Grid.Row="1"
                 TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 FontFamily="Consolas, Courier New, monospace"
                 FontSize="12"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button Content="🌟 اختبار MainWindow" Click="TestMainWindow_Click"/>
            <Button Content="📊 اختبار قاعدة البيانات" Click="TestDatabase_Click"/>
            <Button Content="🔄 تحديث التشخيص" Click="RefreshDiagnostic_Click"/>
            <Button Content="❌ إغلاق" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>