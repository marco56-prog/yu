<Window x:Class="AccountingSystem.WPF.Views.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingSystem.WPF.Views"
        mc:Ignorable="d"
        Title="🩺 طبيب النظام المحاسبي - تشخيص وإصلاح شامل" 
        Height="700" Width="1000" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Style="{StaticResource StandardWindow}">
    
    <Window.Resources>
        <!-- محولات القيم -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- أنماط خاصة بنافذة الطبيب -->
        <Style x:Key="StatusCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource MasterSurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MasterBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="100"/>
        </Style>

        <Style x:Key="ResultItem" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource MasterSurfaceBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Ok">
                    <Setter Property="BorderBrush" Value="#28A745"/>
                    <Setter Property="Background" Value="#F8FFF8"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Warning">
                    <Setter Property="BorderBrush" Value="#FFC107"/>
                    <Setter Property="Background" Value="#FFFEF8"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Failed">
                    <Setter Property="BorderBrush" Value="#DC3545"/>
                    <Setter Property="Background" Value="#FFF8F8"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource SafePrimaryButton}">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource MasterPrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="🩺 طبيب النظام المحاسبي" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="تشخيص شامل لصحة النظام وإصلاح المشاكل تلقائياً" 
                               FontSize="13" 
                               Foreground="#E0FFFFFF"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="🔄 تحديث" 
                            Style="{StaticResource ActionButton}"
                            Background="#20FFFFFF"
                            Foreground="White"
                            BorderThickness="1"
                            BorderBrush="White"
                            Command="{Binding RefreshCommand}"/>
                    <Button Content="📤 تصدير التقرير" 
                            Style="{StaticResource ActionButton}"
                            Background="#20FFFFFF"
                            Foreground="White"
                            BorderThickness="1"
                            BorderBrush="White"
                            Command="{Binding ExportReportCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- شريط التقدم والحالة -->
        <Border Grid.Row="1" Background="{DynamicResource MasterBackgroundBrush}" Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- شريط التقدم -->
                <ProgressBar Grid.Row="0" 
                            Height="8" 
                            Value="{Binding ProgressValue}"
                            Maximum="100"
                            Style="{DynamicResource ModernProgressBar}"
                            Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <!-- رسالة الحالة -->
                <TextBlock Grid.Row="1" 
                          Text="{Binding StatusMessage}" 
                          FontSize="14" 
                          FontWeight="Medium"
                          Foreground="{DynamicResource MasterTextPrimaryBrush}"
                          Margin="0,8,0,0"
                          TextAlignment="Center"/>
            </Grid>
        </Border>

        <!-- المحتوى الرئيسي -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- الشريط الجانبي - الملخص والأدوات -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource MasterSurfaceBrush}"
                    BorderBrush="{DynamicResource MasterBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,15,0">
                
                <StackPanel>
                    <!-- ملخص النتائج -->
                    <TextBlock Text="📊 ملخص التشخيص" 
                               Style="{StaticResource HeaderTextBlock}"
                               Margin="0,0,0,15"/>

                    <!-- بطاقات الإحصائيات -->
                    <Border Style="{StaticResource StatusCard}" Background="#F8FFF8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="✅" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding OkCount}" FontSize="20" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Foreground="#28A745"/>
                            <TextBlock Text="فحص سليم" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource StatusCard}" Background="#FFFEF8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="⚠️" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding WarningCount}" FontSize="20" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Foreground="#FFC107"/>
                            <TextBlock Text="تحذير" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource StatusCard}" Background="#FFF8F8">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="❌" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding FailedCount}" FontSize="20" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Foreground="#DC3545"/>
                            <TextBlock Text="خطأ حرج" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- حالة النظام العامة -->
                    <Border Style="{StaticResource StatusCard}" Margin="0,15,0,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding IsSystemHealthy, Converter={StaticResource HealthStatusConverter}}" 
                                       FontSize="20" HorizontalAlignment="Center"/>
                            <TextBlock FontSize="13" FontWeight="SemiBold" 
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0">
                                <TextBlock.Text>
                                    <Binding Path="IsSystemHealthy">
                                        <Binding.Converter>
                                            <local:BoolToHealthTextConverter/>
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- أزرار الإجراءات -->
                    <Separator Margin="0,20"/>
                    
                    <Button Content="🩺 بدء التشخيص" 
                            Style="{StaticResource ActionButton}"
                            Command="{Binding RunDiagnosticsCommand}"
                            IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBooleanConverter}}"
                            HorizontalAlignment="Stretch"/>

                    <Button Content="🔧 إصلاح المشاكل" 
                            Style="{StaticResource ActionButton}"
                            Background="{DynamicResource MasterSuccessBrush}"
                            Command="{Binding FixIssuesCommand}"
                            HorizontalAlignment="Stretch"/>

                    <TextBlock Text="💡 نصيحة: سيتم إصلاح المشاكل الآمنة تلقائياً" 
                               FontSize="11" 
                               Foreground="{DynamicResource MasterTextSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="5,10,5,0"/>
                </StackPanel>
            </Border>

            <!-- منطقة النتائج -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource MasterSurfaceBrush}"
                    BorderBrush="{DynamicResource MasterBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- رأس النتائج -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource MasterBackgroundBrush}"
                            Padding="20,15"
                            CornerRadius="8,8,0,0">
                        <TextBlock Text="📋 نتائج الفحص التفصيلية" 
                                   Style="{StaticResource HeaderTextBlock}"
                                   Margin="0"/>
                    </Border>

                    <!-- قائمة النتائج -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                        <Grid>
                            <ItemsControl ItemsSource="{Binding Results}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ResultItem}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- أيقونة الحالة -->
                                                <TextBlock Grid.Column="0" Grid.Row="0" 
                                                           Text="{Binding StatusIcon}" 
                                                           FontSize="18" 
                                                           VerticalAlignment="Top"
                                                           Margin="0,0,10,0"/>

                                                <!-- اسم الفحص والرسالة -->
                                                <StackPanel Grid.Column="1" Grid.Row="0">
                                                    <TextBlock Text="{Binding CheckName}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="13"
                                                               Margin="0,0,0,3"/>
                                                    <TextBlock Text="{Binding Message}" 
                                                               FontSize="12"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <!-- معلومات إضافية -->
                                                <StackPanel Grid.Column="2" Grid.Row="0" 
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top">
                                                    <TextBlock Text="{Binding DurationText}" 
                                                               FontSize="10"
                                                               Foreground="{DynamicResource MasterTextSecondaryBrush}"
                                                               HorizontalAlignment="Right"/>
                                                    <TextBlock Text="{Binding Category}" 
                                                               FontSize="10"
                                                               Foreground="{DynamicResource MasterTextSecondaryBrush}"
                                                               HorizontalAlignment="Right"/>
                                                </StackPanel>

                                                <!-- التفاصيل -->
                                                <TextBlock Grid.Column="1" Grid.Row="1" 
                                                           Text="{Binding Details}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource MasterTextSecondaryBrush}"
                                                           TextWrapping="Wrap"
                                                           Margin="0,5,0,0"
                                                           Visibility="{Binding Details, Converter={StaticResource StringToVisibilityConverter}}"/>

                                                <!-- الإجراء المقترح -->
                                                <TextBlock Grid.Column="1" Grid.Row="2" 
                                                           FontSize="11"
                                                           Foreground="{DynamicResource MasterInfoBrush}"
                                                           TextWrapping="Wrap"
                                                           Margin="0,5,0,0"
                                                           Visibility="{Binding RecommendedAction, Converter={StaticResource StringToVisibilityConverter}}">
                                                    <Run Text="💡 الإجراء المقترح: "/>
                                                    <Run Text="{Binding RecommendedAction}"/>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- رسالة عدم وجود نتائج -->
                            <TextBlock Text="لا توجد نتائج حتى الآن. اضغط 'بدء التشخيص' لفحص النظام."
                                       FontSize="14"
                                       Foreground="{DynamicResource MasterTextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding Results.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- شريط الأدوات السفلي -->
        <Border Grid.Row="3" 
                Background="{DynamicResource MasterSurfaceBrush}"
                BorderBrush="{DynamicResource MasterBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- معلومات إضافية -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="آخر فحص:" FontSize="11" Foreground="{DynamicResource MasterTextSecondaryBrush}"/>
                    <TextBlock Text="{Binding LastCheckTime}" FontSize="11" 
                               Foreground="{DynamicResource MasterTextSecondaryBrush}" Margin="5,0"/>
                    <TextBlock Text="•" FontSize="11" Foreground="{DynamicResource MasterTextSecondaryBrush}" Margin="5,0"/>
                    <TextBlock Text="إصدار الطبيب: v1.0" FontSize="11" 
                               Foreground="{DynamicResource MasterTextSecondaryBrush}"/>
                </StackPanel>

                <!-- أزرار الإغلاق -->
                <Button Grid.Column="1" 
                        Content="إغلاق" 
                        Style="{StaticResource SafeSecondaryButton}"
                        Click="CloseButton_Click"
                        MinWidth="80"/>
            </Grid>
        </Border>
    </Grid>
</Window>