<Window x:Class="AccountingSystem.WPF.Views.FinancialAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="التحليل المالي - نظام المحاسبة"
        Height="700" Width="1000"
        Style="{StaticResource StandardWindow}">

    <Window.Resources>
        <!-- استخدام الأنماط الموحدة -->
        <Style x:Key="CardStyle" TargetType="Border" BasedOn="{StaticResource StandardCard}"/>
        <Style x:Key="TitleStyle" TargetType="TextBlock" BasedOn="{StaticResource SubHeaderTextBlock}">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        </Style>
        <Style x:Key="MetricStyle" TargetType="TextBlock" BasedOn="{StaticResource HeaderTextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- الشريط العلوي -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="التحليل المالي" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="تحليل شامل للأداء المالي للشركة" FontSize="14" Foreground="#BBDEFB" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- فلاتر الفترة -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" >
                    <TextBlock Text="من:" Foreground="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding FromDate, Mode=TwoWay}" Width="130" Margin="0,0,12,0"/>
                    <TextBlock Text="إلى:" Foreground="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding ToDate, Mode=TwoWay}" Width="130" Margin="0,0,12,0"/>
                    <Button Content="تحديث" Click="BtnRefresh_Click"
                            Background="#4CAF50" Foreground="White" Padding="15,8" BorderThickness="0" Margin="0,0,8,0"/>
                    <Button Content="تصدير" Click="BtnExport_Click"
                            Background="#9C27B0" Foreground="White" Padding="15,8" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- المحتوى الرئيسي -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- مؤشرات الأداء الرئيسية -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="مؤشرات الأداء الرئيسية (KPIs)" Style="{StaticResource TitleStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- إجمالي الإيرادات -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="إجمالي الإيرادات" FontSize="14" HorizontalAlignment="Center" Margin="0,5"/>
                                <TextBlock Text="{Binding RevenueText}" Foreground="#4CAF50" Style="{StaticResource MetricStyle}"/>
                                <TextBlock Text="{Binding RevenueGrowthText}" FontSize="12"
                                           Foreground="{Binding RevenueGrowthBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- صافي الربح -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="صافي الربح" FontSize="14" HorizontalAlignment="Center" Margin="0,5"/>
                                <TextBlock Text="{Binding NetProfitText}" Foreground="#2196F3" Style="{StaticResource MetricStyle}"/>
                                <TextBlock Text="{Binding ProfitGrowthText}" FontSize="12"
                                           Foreground="{Binding ProfitGrowthBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- هامش الربح -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="📈" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="هامش الربح" FontSize="14" HorizontalAlignment="Center" Margin="0,5"/>
                                <TextBlock Text="{Binding ProfitMarginText}" Foreground="#FF9800" Style="{StaticResource MetricStyle}"/>
                                <TextBlock Text="{Binding ProfitMarginGrowthText}" FontSize="12"
                                           Foreground="{Binding ProfitMarginGrowthBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- معدل دوران المخزون -->
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="⚡" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="معدل دوران المخزون" FontSize="14" HorizontalAlignment="Center" Margin="0,5"/>
                                <TextBlock Text="{Binding InventoryTurnoverText}" Foreground="#9C27B0" Style="{StaticResource MetricStyle}"/>
                                <TextBlock Text="{Binding InventoryTurnoverGrowthText}" FontSize="12"
                                           Foreground="{Binding InventoryTurnoverGrowthBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- التحليل التفصيلي -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="التحليل التفصيلي" Style="{StaticResource TitleStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- المبيعات حسب الفئة -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="المبيعات حسب الفئة" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ItemsControl ItemsSource="{Binding CategoryShares}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <Rectangle Width="20" Height="15" Fill="{Binding Color}" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Label}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- أفضل العملاء -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="أفضل العملاء" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ItemsControl ItemsSource="{Binding TopCustomers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <TextBlock Text="{Binding RankEmoji}" FontSize="16" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Display}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- التوصيات -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="التوصيات والإجراءات المقترحة" Style="{StaticResource TitleStyle}"/>
                        <ItemsControl ItemsSource="{Binding Recommendations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
