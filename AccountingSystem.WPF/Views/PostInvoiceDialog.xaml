<Window x:Class="AccountingSystem.WPF.Views.PostInvoiceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="عمليات ما بعد حفظ الفاتورة"
        Height="580" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- عام -->
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- استايل حديث للأزرار -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black"
                                                          Direction="270"
                                                          ShadowDepth="3"
                                                          Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- العنوان -->
            <RowDefinition Height="Auto"/>  <!-- معلومات الفاتورة -->
            <RowDefinition Height="Auto"/>  <!-- اختيارات العمليات -->
            <RowDefinition Height="Auto"/>  <!-- تفاصيل الدفعة (يظهر/يختفي) -->
            <RowDefinition Height="*"/>     <!-- Spacer -->
            <RowDefinition Height="Auto"/>  <!-- أزرار التحكم -->
        </Grid.RowDefinitions>

        <!-- عنوان النافذة -->
        <Border Grid.Row="0" Padding="10" Margin="0,0,0,12" Background="#F0FFF4" BorderBrush="#28A745" BorderThickness="1" CornerRadius="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="✓" FontSize="24" Foreground="#28A745" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Text="تم حفظ الفاتورة بنجاح!" FontSize="18" FontWeight="Bold" Foreground="#28A745"/>
            </StackPanel>
        </Border>

        <!-- معلومات الفاتورة -->
        <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#28A745" BorderThickness="1"
                Padding="16" CornerRadius="10" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="رقم الفاتورة" FontSize="12" FontWeight="Bold" Foreground="#6C757D" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblInvoiceNumber" Text="-" FontSize="16" FontWeight="Bold" Foreground="#007BFF" HorizontalAlignment="Center" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="العميل" FontSize="12" FontWeight="Bold" Foreground="#6C757D" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblCustomerName" Text="-" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="إجمالي الفاتورة" FontSize="12" FontWeight="Bold" Foreground="#6C757D" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblNetTotal" Text="-" FontSize="16" FontWeight="Bold" Foreground="#28A745" HorizontalAlignment="Center" Margin="0,5"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <TextBlock Text="المتبقي" FontSize="12" FontWeight="Bold" Foreground="#6C757D" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblRemainingAmount" Text="-" FontSize="16" FontWeight="Bold" Foreground="#DC3545" HorizontalAlignment="Center" Margin="0,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- خيارات العمليات -->
        <GroupBox Grid.Row="2" Header="⚙️ اختر العمليات المطلوبة"
                  Padding="16" Margin="0,0,0,12"
                  FontSize="15" FontWeight="Bold"
                  BorderBrush="#17A2B8" BorderThickness="1" Background="#F8F9FA">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="#E9ECEF" BorderThickness="1" CornerRadius="8" Padding="12" Margin="6" Background="White">
                    <CheckBox x:Name="chkPrintInvoice" IsChecked="True" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="🖨️" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="طباعة الفاتورة" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="فوراً" FontSize="11" Foreground="#6C757D" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </CheckBox>
                </Border>

                <Border Grid.Column="1" BorderBrush="#E9ECEF" BorderThickness="1" CornerRadius="8" Padding="12" Margin="6" Background="White">
                    <CheckBox x:Name="chkCollectPayment" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"
                              Checked="chkCollectPayment_Checked" Unchecked="chkCollectPayment_Unchecked">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="تسجيل دفعة" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="جزئية أو كاملة" FontSize="11" Foreground="#6C757D" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </CheckBox>
                </Border>

                <Border Grid.Column="2" BorderBrush="#E9ECEF" BorderThickness="1" CornerRadius="8" Padding="12" Margin="6" Background="White">
                    <CheckBox x:Name="chkOpenNewInvoice" IsChecked="True" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="📝" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="فاتورة جديدة" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="بعد الانتهاء" FontSize="11" Foreground="#6C757D" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </CheckBox>
                </Border>
            </Grid>
        </GroupBox>

        <!-- قسم تسجيل الدفعة -->
        <GroupBox Grid.Row="3" x:Name="grpPayment" Header="💳 تفاصيل الدفعة" Padding="16"
                  Margin="0,0,0,12" Visibility="Collapsed" FontSize="15" FontWeight="Bold"
                  BorderBrush="#FFC107" BorderThickness="1" Background="#FFFBF0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="المبلغ المدفوع:"
                           FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtPaymentAmount"
                         Text="0" TextAlignment="Center" Height="35" FontSize="14" FontWeight="Bold"
                         TextChanged="txtPaymentAmount_TextChanged"
                         PreviewTextInput="TxtPaymentAmount_PreviewTextInput"
                         BorderBrush="#007BFF" BorderThickness="2"
                         VerticalContentAlignment="Center" Background="White" Margin="5,0"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="ج.م" FontSize="14" FontWeight="Bold"
                           VerticalAlignment="Center" Margin="10,0,20,0"/>

                <TextBlock Grid.Row="0" Grid.Column="3" Text="الباقي بعد الدفع:"
                           FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <Border Grid.Row="0" Grid.Column="4" BorderBrush="#28A745" BorderThickness="2"
                        CornerRadius="5" Padding="10,8" Background="#F8F9FA">
                    <TextBlock x:Name="lblNewRemainingAmount" Text="0.00 ج.م"
                               FontWeight="Bold" Foreground="#28A745" FontSize="14"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5"
                           Text="يمكنك تعديل المبلغ حسب ما تم تحصيله فعلاً من العميل"
                           FontSize="12" Foreground="#6C757D" FontStyle="Italic" HorizontalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- أزرار التحكم الرئيسية -->
        <DockPanel Grid.Row="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" Width="180" Height="50"
                        Background="#6C757D" Foreground="White"
                        Click="btnCancel_Click" IsCancel="True"
                        Style="{StaticResource ModernButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✖" FontSize="18" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="إلغاء وإغلاق" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="بدون تنفيذ" FontSize="12" Opacity="0.9"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <Button x:Name="btnProceed" Width="200" Height="50"
                        Background="#28A745" Foreground="White"
                        Click="btnProceed_Click" IsDefault="True"
                        Style="{StaticResource ModernButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✓" FontSize="20" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="تنفيذ العمليات" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="والمتابعة" FontSize="12" Opacity="0.9"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
