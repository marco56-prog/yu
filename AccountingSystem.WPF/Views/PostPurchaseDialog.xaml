<Window x:Class="AccountingSystem.WPF.Views.PostPurchaseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="بعد حفظ فاتورة الشراء" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        FontFamily="Segoe UI, Tahoma"
        FontSize="14"
        Background="#F8F9FA"
        >
    <Border BorderBrush="#E9ECEF" BorderThickness="1" CornerRadius="10" Margin="10">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- العنوان -->
            <TextBlock Grid.Row="0" Text="🎉 تم حفظ الفاتورة بنجاح!" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#28A745" Margin="0,0,0,15"/>

            <!-- معلومات الفاتورة -->
            <Border Grid.Row="1" Background="White" BorderBrush="#DEE2E6" BorderThickness="1" 
                    CornerRadius="5" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="📄 رقم الفاتورة:" FontWeight="Bold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Name="lblInvoiceNumber" Text="" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="🏢 المورد:" FontWeight="Bold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Name="lblSupplierName" Text="" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="💰 الإجمالي:" FontWeight="Bold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Name="lblNetTotal" Text="" Foreground="#28A745" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="📊 المتبقي:" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Name="lblRemainingAmount" Text="" Foreground="#DC3545"/>
                </Grid>
            </Border>

            <!-- الخيارات -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <CheckBox Name="chkPrintInvoice" Content="🖨 طباعة الفاتورة" FontSize="14" 
                          Margin="0,5" IsChecked="True"/>
                <CheckBox Name="chkRecordPayment" Content="💵 تسجيل دفعة للمورد" FontSize="14" 
                          Margin="0,5" Checked="chkRecordPayment_Checked" Unchecked="chkRecordPayment_Unchecked"/>
                <CheckBox Name="chkOpenNewInvoice" Content="📄 فتح فاتورة شراء جديدة" FontSize="14" 
                          Margin="0,5"/>
            </StackPanel>

            <!-- قسم الدفع -->
            <GroupBox Grid.Row="3" Name="grpPayment" Header="تفاصيل الدفعة" Visibility="Collapsed" 
                      Background="White" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="💰 مبلغ الدفع:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtPaymentAmount" Height="25" 
                             TextAlignment="Center" Margin="0,0,0,5" TextChanged="txtPaymentAmount_TextChanged"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="📊 المتبقي الجديد:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Name="lblNewRemainingAmount" Text="0.00 ج.م" 
                               FontWeight="Bold" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="💡 سيتم تسجيل الدفع في حساب المورد وتحديث الرصيد" 
                               FontSize="11" Foreground="#6C757D" TextWrapping="Wrap"/>
                </Grid>
            </GroupBox>

            <!-- أزرار التحكم -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnProceed" Content="✅ تنفيذ" Width="80" Height="35" Margin="10,0" 
                        Click="btnProceed_Click" IsDefault="True" 
                        Background="#007BFF" Foreground="White" FontWeight="Bold"/>
                <Button Name="btnCancel" Content="❌ إلغاء" Width="80" Height="35" Margin="10,0" 
                        Click="btnCancel_Click" IsCancel="True"
                        Background="#6C757D" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
