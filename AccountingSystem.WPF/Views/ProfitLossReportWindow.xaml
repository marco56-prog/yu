<Window x:Class="AccountingSystem.WPF.Views.ProfitLossReportWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="الأرباح والخسائر" Height="520" Width="900" WindowStartupLocation="CenterOwner">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" Text="الأرباح والخسائر" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
		<DataGrid Grid.Row="1" x:Name="dgProfitLoss" AutoGenerateColumns="True"/>
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
			<Button Content="إغلاق" Width="100" Click="Close_Click"/>
		</StackPanel>
	</Grid>
</Window>
