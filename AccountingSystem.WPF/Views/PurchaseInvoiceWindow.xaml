<Window x:Class="AccountingSystem.WPF.Views.PurchaseInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="فاتورة شراء"
        Height="750" Width="1200" 
        Style="{StaticResource StandardWindow}"
        WindowState="Maximized">
    
    <Grid Style="{StaticResource MainWindowLayout}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- شريط العنوان -->
        <Border Grid.Row="0" Style="{StaticResource TitleBarLayout}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{StaticResource PurchaseIcon}" 
                           FontSize="24" 
                           VerticalAlignment="Center" 
                           Margin="{StaticResource SmallMargin}"/>
                <TextBlock Text="فاتورة شراء"
                           Style="{StaticResource HeaderTextBlock}"
                           Foreground="{StaticResource TextOnPrimaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- عنوان وبيانات أساسية -->
        <Border Grid.Row="1" Style="{StaticResource StandardCard}" Margin="{StaticResource MediumMargin}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- الصف الأول: العنوان والأزرار -->
                <Grid Grid.Row="0" Margin="{StaticResource MediumMargin}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="معلومات أساسية"
                               Style="{StaticResource SubHeaderTextBlock}"/>
                    
                    <!-- أزرار التنقل والتعديل -->
                    <StackPanel Grid.Column="1" Style="{StaticResource HorizontalButtonGroup}">
                        <Button Name="btnPreviousInvoice" 
                                Style="{StaticResource SecondaryButton}"
                                Click="btnPreviousInvoice_Click" 
                                ToolTip="الفاتورة السابقة (Ctrl+Left)">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter Content="{StaticResource BackIcon}" Margin="0,0,5,0"/>
                                <TextBlock Text="السابقة"/>
                            </StackPanel>
                        </Button>
                        <Button Name="btnNextInvoice" 
                                Style="{StaticResource SecondaryButton}"
                                Click="btnNextInvoice_Click" 
                                ToolTip="الفاتورة التالية (Ctrl+Right)">
                             <StackPanel Orientation="Horizontal">
                                <TextBlock Text="التالية"/>
                                <ContentPresenter Content="{StaticResource ForwardIcon}" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Name="btnEdit" 
                                Style="{StaticResource WarningButton}"
                                Click="btnEdit_Click" 
                                ToolTip="تعديل الفاتورة">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter Content="{StaticResource EditIcon}" Margin="0,0,5,0"/>
                                <TextBlock Text="تعديل"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- الصف الثاني: معلومات الفاتورة -->
                <Grid Grid.Row="1" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource FormFieldGroup}">
                        <StackPanel>
                            <TextBlock Text="رقم الفاتورة:" Style="{StaticResource FieldLabelTextBlock}"/>
                            <Border Style="{StaticResource SummaryPill}" Background="{StaticResource WarningBrush}">
                                <Label Name="lblInvoiceNumber" 
                                       Content="سيتم التوليد تلقائياً"
                                       Foreground="{StaticResource TextOnPrimaryBrush}"/>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="1" Style="{StaticResource FormFieldGroup}">
                        <StackPanel>
                            <TextBlock Text="تاريخ الفاتورة:" Style="{StaticResource FieldLabelTextBlock}"/>
                            <DatePicker Name="dpInvoiceDate" Style="{StaticResource StandardDatePicker}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource FormFieldGroup}">
                        <StackPanel>
                            <TextBlock Text="بحث الفواتير:" Style="{StaticResource FieldLabelTextBlock}"/>
                            <Button Name="btnSearchPurchaseInvoices" 
                                    Style="{StaticResource SuccessButton}"
                                    Click="btnSearchPurchaseInvoices_Click" 
                                    ToolTip="بحث في فواتير الشراء السابقة (F3)">
                                <StackPanel Orientation="Horizontal">
                                    <ContentPresenter Content="{StaticResource SearchIcon}" Margin="0,0,5,0"/>
                                    <TextBlock Text="فواتير سابقة"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="3" Margin="5,0">
                        <TextBlock Text="الرصيد السابق:" FontWeight="Bold" FontSize="{StaticResource FontSizeSmall}"/>
                        <Label Name="lblPreviousBalance" Content="0.00 ج.م"
                               Background="{StaticResource InfoBrush}" Height="25" FontSize="{StaticResource FontSizeSmall}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Margin="5,0">
                        <TextBlock Text="المبلغ المدفوع:" FontWeight="Bold" FontSize="{StaticResource FontSizeSmall}"/>
                        <TextBox Name="txtPaidAmount" Text="0" Height="25" FontSize="{StaticResource FontSizeSmall}"
                                 TextChanged="txtPaidAmount_TextChanged"/>
                    </StackPanel>
                </Grid>

                <!-- الصف الثالث: المورد والملاحظات -->
                <Grid Grid.Row="2" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="5,0">
                        <TextBlock Text="المورد:" FontWeight="Bold" FontSize="12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" Name="cmbSupplier" Height="25" 
                                      DisplayMemberPath="SupplierName" 
                                      SelectedValuePath="SupplierId" 
                                      SelectionChanged="cmbSupplier_SelectionChanged"
                                      IsEditable="True" IsTextSearchEnabled="True"
                                      KeyDown="cmbSupplier_KeyDown"
                                      DropDownOpened="cmbSupplier_DropDownOpened"
                                      PreviewTextInput="cmbSupplier_PreviewTextInput"/>
                            <Button Grid.Column="1" Name="btnSearchSupplier"
                                    Style="{StaticResource SecondaryButton}"
                                    Click="btnSearchSupplier_Click" ToolTip="بحث في الموردين (F1)">
                                <ContentPresenter Content="{StaticResource SearchIcon}"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="5,0">
                        <TextBlock Text="ملاحظات:" FontWeight="Bold" FontSize="12"/>
                        <TextBox Name="txtNotes" Height="25" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- تفاصيل الفاتورة -->
        <Border Grid.Row="2" Style="{StaticResource StandardCard}" Margin="{StaticResource MediumMargin}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="تفاصيل الفاتورة"
                           Style="{StaticResource SubHeaderTextBlock}" 
                           Margin="{StaticResource MediumMargin}"/>

                <!-- شريط إضافة صنف -->
                <Border Grid.Row="1" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1" CornerRadius="3" Margin="0,5" Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- عناوين الأعمدة -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="المنتج" Style="{StaticResource FieldLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="الوحدة" Style="{StaticResource FieldLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="الكمية" Style="{StaticResource FieldLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="السعر" Style="{StaticResource FieldLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="4" Text="الخصم" Style="{StaticResource FieldLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="5" Text="متاح" Style="{StaticResource FieldLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="6" Text="الإجمالي" Style="{StaticResource FieldLabel}"/>

                        <Grid Grid.Row="1" Grid.Column="0" Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" Name="cmbProduct" 
                                      DisplayMemberPath="ProductName" 
                                      SelectedValuePath="ProductId" 
                                      SelectionChanged="cmbProduct_SelectionChanged"
                                      IsEditable="True" IsTextSearchEnabled="True"
                                      KeyDown="cmbProduct_KeyDown"
                                      Style="{StaticResource StandardComboBox}"
                                      DropDownOpened="cmbProduct_DropDownOpened"
                                      PreviewTextInput="cmbProduct_PreviewTextInput"/>
                            <Button Grid.Column="1" Name="btnSearchProduct"
                                    Style="{StaticResource SecondaryButton}"
                                    Click="btnSearchProduct_Click" ToolTip="بحث في المنتجات (F2)">
                                <ContentPresenter Content="{StaticResource SearchIcon}"/>
                            </Button>
                        </Grid>
                        
                        <ComboBox Grid.Row="1" Grid.Column="1" Name="cmbUnit" 
                                  DisplayMemberPath="UnitName" 
                                  SelectedValuePath="UnitId"
                                  SelectionChanged="cmbUnit_SelectionChanged"
                                  Style="{StaticResource StandardComboBox}" Margin="2"/>
                        
                        <TextBox Grid.Row="1" Grid.Column="2" Name="txtQuantity" Text="1" 
                                 Style="{StaticResource StandardTextBox}" TextAlignment="Center" Margin="2"
                                 TextChanged="QuantityChanged" KeyDown="txtQuantity_KeyDown"/>
                        
                        <TextBox Grid.Row="1" Grid.Column="3" Name="txtUnitPrice" Text="0" 
                                 Style="{StaticResource StandardTextBox}" TextAlignment="Center" Margin="2"
                                 TextChanged="UnitPriceChanged"/>
                        
                        <TextBox Grid.Row="1" Grid.Column="4" Name="txtDiscount" Text="0" 
                                 Style="{StaticResource StandardTextBox}" TextAlignment="Center" Margin="2"
                                 TextChanged="DiscountChanged"/>
                        
                        <TextBox Grid.Row="1" Grid.Column="5" Name="txtStock" IsReadOnly="True" 
                                 Background="{StaticResource BackgroundBrush}" TextAlignment="Center" 
                                 Style="{StaticResource StandardTextBox}" Margin="2"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="6" Name="lblTotal" Text="0.00" 
                                   TextAlignment="Center" VerticalAlignment="Center" 
                                   FontWeight="Bold" FontSize="{StaticResource FontSizeBody}" Margin="2"/>
                        
                        <Button Grid.Row="1" Grid.Column="7" Name="btnAddItem" Content="إضافة"
                                Style="{StaticResource PrimaryButton}" Click="btnAddItem_Click"/>
                    </Grid>
                </Border>

                <!-- الجريد -->
                <DataGrid Grid.Row="2" Name="dgItems" 
                          Style="{StaticResource StandardDataGrid}"
                          ItemsSource="{Binding Items}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="المنتج" Binding="{Binding Product.ProductName}" Width="2.5*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="الوحدة" Binding="{Binding Unit.UnitName}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="الكمية" Binding="{Binding Quantity}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="السعر" Binding="{Binding UnitPrice, StringFormat=N2}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="الخصم" Binding="{Binding DiscountAmount, StringFormat=N2}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="الإجمالي" Binding="{Binding TotalPrice, StringFormat=N2}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="الصافي" Binding="{Binding NetAmount, StringFormat=N2}" Width="*" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="حذف" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="❌" Click="btnDeleteItem_Click"
                                            Style="{StaticResource DangerButton}"
                                            Tag="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- الإجماليات -->
        <Border Grid.Row="3" Style="{StaticResource StandardCard}" Margin="{StaticResource MediumMargin}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- معلومات إضافية -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="معلومات الفاتورة"
                               Style="{StaticResource SubHeaderTextBlock}" 
                               Margin="{StaticResource MediumMargin}"/>
                    <Border Style="{StaticResource SummaryPill}" 
                            Background="{StaticResource WarningBrush}" 
                            HorizontalAlignment="Left">
                        <TextBlock Name="lblStatus" 
                                   Text="حالة الفاتورة: مسودة"
                                   Foreground="{StaticResource TextOnPrimaryBrush}"/>
                    </Border>
                </StackPanel>

                <!-- الإجماليات -->
                <Border Grid.Column="1" Style="{StaticResource SummaryContainer}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="إجمالي فرعي:" Style="{StaticResource FieldLabelTextBlock}"/>
                        <Label Grid.Row="0" Grid.Column="1" Name="lblSubTotal" Content="0.00" Style="{StaticResource SummaryValueLabel}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="إجمالي الخصم:" Style="{StaticResource FieldLabelTextBlock}"/>
                        <Label Grid.Row="1" Grid.Column="1" Name="lblTotalDiscount" Content="0.00" Style="{StaticResource SummaryValueLabel}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="الضريبة:" Style="{StaticResource FieldLabelTextBlock}"/>
                        <Label Grid.Row="2" Grid.Column="1" Name="lblTaxAmount" Content="0.00" Style="{StaticResource SummaryValueLabel}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="الإجمالي:" Style="{StaticResource FieldLabelTextBlock}" FontSize="{StaticResource FontSizeLarge}" Foreground="{StaticResource SuccessBrush}"/>
                        <Label Grid.Row="3" Grid.Column="1" Name="lblNetTotal" Content="0.00" Style="{StaticResource SummaryValueLabel}" FontSize="{StaticResource FontSizeLarge}" Foreground="{StaticResource SuccessBrush}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="المتبقي:" Style="{StaticResource FieldLabelTextBlock}" Foreground="{StaticResource ErrorBrush}"/>
                        <Label Grid.Row="4" Grid.Column="1" Name="lblRemainingAmount" Content="0.00" Style="{StaticResource SummaryValueLabel}" Foreground="{StaticResource ErrorBrush}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- أزرار التحكم -->
        <Border Grid.Row="4" Style="{StaticResource ActionBarLayout}">
            <StackPanel Style="{StaticResource HorizontalButtonGroup}" HorizontalAlignment="Center">
                <Button Name="btnSave" 
                        Style="{StaticResource SuccessButton}" 
                        Click="btnSave_Click">
                    <StackPanel Orientation="Horizontal">
                        <ContentPresenter Content="{StaticResource SaveIcon}" Margin="0,0,5,0"/>
                        <TextBlock Text="حفظ"/>
                    </StackPanel>
                </Button>
                <Button Name="btnPrint" 
                        Style="{StaticResource InfoButton}" 
                        Click="btnPrint_Click">
                    <StackPanel Orientation="Horizontal">
                        <ContentPresenter Content="{StaticResource PrintIcon}" Margin="0,0,5,0"/>
                        <TextBlock Text="طباعة"/>
                    </StackPanel>
                </Button>
                <Button Name="btnNew" 
                        Style="{StaticResource PrimaryButton}" 
                        Click="btnNew_Click">
                    <StackPanel Orientation="Horizontal">
                        <ContentPresenter Content="{StaticResource AddIcon}" Margin="0,0,5,0"/>
                        <TextBlock Text="جديد"/>
                    </StackPanel>
                </Button>
                <Button Name="btnCancel" 
                        Style="{StaticResource DangerButton}" 
                        Click="btnCancel_Click">
                    <StackPanel Orientation="Horizontal">
                        <ContentPresenter Content="{StaticResource CancelIcon}" Margin="0,0,5,0"/>
                        <TextBlock Text="إلغاء"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>