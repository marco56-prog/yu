<Window x:Class="AccountingSystem.WPF.Views.PurchaseInvoicesListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="قائمة فواتير الشراء" Height="800" Width="1400" WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft" FontFamily="Segoe UI, Tahoma" FontSize="14" 
        WindowState="Maximized">

    <!-- Use centralized resources from Resources/UnifiedStyles.xaml to avoid duplicate keys.
         Local overrides were removed to prevent XAML parse conflicts. -->

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- شريط العنوان والأزرار -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="8,8,8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- معلومات النافذة -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📋" FontSize="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="قائمة فواتير الشراء" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="إدارة ومراجعة فواتير الشراء من الموردين" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- أزرار التحكم -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnNew" Content="فاتورة جديدة" Style="{StaticResource SuccessButtonStyle}" Click="btnNew_Click"/>
                    <Button x:Name="btnView" Content="عرض" Style="{StaticResource ModernButtonStyle}" Click="btnView_Click"/>
                    <Button x:Name="btnPost" Content="ترحيل" Style="{StaticResource ModernButtonStyle}" Click="btnPost_Click"/>
                    <Button x:Name="btnCancel" Content="إلغاء" Style="{StaticResource DangerButtonStyle}" Click="btnCancel_Click"/>
                    <Button x:Name="btnRefresh" Content="تحديث" Style="{StaticResource ModernButtonStyle}" Click="btnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- شريط الفلاتر -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="8,4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- الصف الأول من الفلاتر -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- البحث النصي -->
                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <Label Content="البحث:" FontWeight="Bold" Padding="0,0,0,4"/>
                        <TextBox x:Name="txtSearch" Style="{StaticResource ModernTextBoxStyle}"
                                TextChanged="Filter_TextChanged" 
                                ToolTip="البحث في رقم الفاتورة، اسم المورد، أو التاريخ"/>
                    </StackPanel>

                    <!-- الحالة -->
                    <StackPanel Grid.Column="1" Margin="4,0">
                        <Label Content="الحالة:" FontWeight="Bold" Padding="0,0,0,4"/>
                        <ComboBox x:Name="cmbStatusFilter" Style="{StaticResource ModernComboBoxStyle}"
                                 SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>

                    <!-- المورد -->
                    <StackPanel Grid.Column="2" Margin="4,0">
                        <Label Content="المورد:" FontWeight="Bold" Padding="0,0,0,4"/>
                        <ComboBox x:Name="cmbSupplierFilter" Style="{StaticResource ModernComboBoxStyle}"
                                 DisplayMemberPath="SupplierName"
                                 SelectionChanged="Filter_SelectionChanged"/>
                    </StackPanel>

                    <!-- من تاريخ -->
                    <StackPanel Grid.Column="3" Margin="4,0">
                        <Label Content="من تاريخ:" FontWeight="Bold" Padding="0,0,0,4"/>
                        <DatePicker x:Name="dpFromDate" Style="{StaticResource ModernComboBoxStyle}"
                                   SelectedDateChanged="dpFromDate_SelectedDateChanged"/>
                    </StackPanel>

                    <!-- إلى تاريخ -->
                    <StackPanel Grid.Column="4" Margin="4,0">
                        <Label Content="إلى تاريخ:" FontWeight="Bold" Padding="0,0,0,4"/>
                        <DatePicker x:Name="dpToDate" Style="{StaticResource ModernComboBoxStyle}"
                                   SelectedDateChanged="dpToDate_SelectedDateChanged"/>
                    </StackPanel>

                    <!-- فلتر المبلغ -->
                    <StackPanel Grid.Column="5" Margin="8,0,0,0">
                        <Label Content="المبلغ (ج.م):" FontWeight="Bold" Padding="0,0,0,4"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="txtMinAmount" Grid.Column="0" Style="{StaticResource ModernTextBoxStyle}"
                                    ToolTip="الحد الأدنى للمبلغ" TextChanged="Filter_TextChanged"/>
                            <TextBlock Grid.Column="1" Text=" - " VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4,0"/>
                            <TextBox x:Name="txtMaxAmount" Grid.Column="2" Style="{StaticResource ModernTextBoxStyle}"
                                    ToolTip="الحد الأعلى للمبلغ" TextChanged="Filter_TextChanged"/>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- الصف الثاني: الإحصائيات -->
                <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" 
                       BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Padding="12">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Margin="0,0,24,0">
                            <TextBlock x:Name="lblCount" Text="عدد الفواتير: 0" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,24,0">
                            <TextBlock x:Name="lblTotal" Text="الإجمالي: 0.00 ج.م" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,24,0">
                            <TextBlock x:Name="lblPaid" Text="المدفوع: 0.00 ج.م" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource AccentBrush}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock x:Name="lblRemaining" Text="المتبقي: 0.00 ج.م" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource WarningBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- جدول الفواتير -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <!-- جدول البيانات -->
                <DataGrid x:Name="dgInvoices" AutoGenerateColumns="False" 
                         CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False"
                         GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                         Background="White" RowBackground="White" AlternatingRowBackground="#F9FAFB"
                         BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                         FontSize="13" SelectionMode="Single"
                         MouseDoubleClick="dgInvoices_MouseDoubleClick"
                         KeyDown="dgInvoices_KeyDown">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="رقم الفاتورة" Binding="{Binding InvoiceNumber}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding InvoiceDate, StringFormat=yyyy/MM/dd}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="المورد" Binding="{Binding Supplier.SupplierName}" Width="*" IsReadOnly="True"/>
                        
                        <DataGridTemplateColumn Header="الحالة" Width="80" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Draft">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Posted">
                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="11" FontWeight="Bold" HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Draft">
                                                            <Setter Property="Text" Value="مسودة"/>
                                                            <Setter Property="Foreground" Value="#92400E"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Posted">
                                                            <Setter Property="Text" Value="مرحّلة"/>
                                                            <Setter Property="Foreground" Value="#065F46"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                            <Setter Property="Text" Value="ملغية"/>
                                                            <Setter Property="Foreground" Value="#991B1B"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="الإجمالي" Binding="{Binding NetTotal, StringFormat=C}" Width="120" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="المدفوع" Binding="{Binding PaidAmount, StringFormat=C}" Width="120" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="المتبقي" Binding="{Binding RemainingAmount, StringFormat=C}" Width="120" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RemainingAmount}" Value="0">
                                            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="الملاحظات" Binding="{Binding Notes}" Width="150" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- رسالة التحميل -->
                <Grid x:Name="dgLoading" Background="White" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,16"/>
                        <TextBlock Text="جاري تحميل الفواتير..." FontSize="16" Foreground="{StaticResource MutedBrush}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- شريط الحالة -->
        <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" Height="28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="💡 نصائح: انقر مرتين لفتح الفاتورة، Delete للإلغاء، Enter للعرض" 
                          VerticalAlignment="Center" Margin="8,0" FontSize="12" Foreground="{StaticResource MutedBrush}"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                    <TextBlock Text="⏰" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='yyyy/MM/dd HH:mm'}" 
                              VerticalAlignment="Center" FontSize="12" Foreground="{StaticResource MutedBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
