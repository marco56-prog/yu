<Window x:Class="AccountingSystem.WPF.Views.PurchaseOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="طلبات الشراء" 
        Height="650" Width="1100" 
        Style="{StaticResource StandardWindow}">
    
    <Grid Style="{StaticResource MainWindowLayout}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- شريط العنوان -->
        <Border Grid.Row="0" Style="{StaticResource TitleBarLayout}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{StaticResource PurchaseOrderIcon}" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="{StaticResource SmallMargin}"/>
                    <TextBlock Text="طلبات الشراء" 
                               Style="{StaticResource HeaderTextBlock}"
                               Foreground="{StaticResource TextOnPrimaryBrush}"/>
                </StackPanel>
                
                <Button Grid.Column="1" Name="btnApprove"
                        Click="btnApprove_Click"
                        Background="#198754" Foreground="White"
                        Padding="15,8" BorderThickness="0" 
                        FontSize="14" FontWeight="Bold" Margin="0,0,10,0"
                        Style="{DynamicResource ModernButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="White" Width="16" Height="16" Margin="0,0,5,0"
                              Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z"/>
                        <TextBlock Text="اعتماد"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="2" Name="btnNewPurchaseOrder"
                        Click="btnNewPurchaseOrder_Click"
                        Background="#28A745" Foreground="White"
                        Padding="15,8" BorderThickness="0" 
                        FontSize="14" FontWeight="Bold"
                        Style="{DynamicResource ModernButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="White" Width="16" Height="16" Margin="0,0,5,0"
                              Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
                        <TextBlock Text="طلب جديد"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search and Summary -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Search Section -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" 
                        BorderBrush="#E0E0E0" BorderThickness="1" Padding="15" Margin="0,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Name="txtSearch" 
                                 Text="البحث برقم الطلب أو المورد..." 
                                 Foreground="Gray" Padding="10" 
                                 FontSize="14" Height="36"
                                 BorderBrush="#DDD" BorderThickness="1"/>

                        <ComboBox Grid.Column="1" Name="cmbStatusFilter" Margin="10,0"
                                  Width="120" Height="36">
                            <ComboBoxItem Content="جميع الحالات"/>
                            <ComboBoxItem Content="قيد الانتظار"/>
                            <ComboBoxItem Content="معتمد"/>
                            <ComboBoxItem Content="مرفوض"/>
                            <ComboBoxItem Content="منجز"/>
                        </ComboBox>

                        <DatePicker Grid.Column="2" Name="dpDateFilter" Margin="10,0"
                                    Width="120" Height="36"/>

                        <Button Grid.Column="3" Name="btnSearch"
                                Click="btnSearch_Click"
                                Background="#007BFF" Foreground="White"
                                Padding="15,8" BorderThickness="0"
                                FontSize="14" Height="36">
                            <Path Fill="White" Width="16" Height="16"
                                  Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Summary Cards -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" 
                        BorderBrush="#E0E0E0" BorderThickness="1" Padding="15">
                    <UniformGrid Columns="2">
                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Text="طلبات قيد الانتظار" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                            <TextBlock Text="15 طلب" FontSize="16" FontWeight="Bold" Foreground="#FD7E14" Margin="0,3,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="إجمالي القيمة" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                            <TextBlock Text="₪ 125,000" FontSize="16" FontWeight="Bold" Foreground="#198754" Margin="0,3,0,0"/>
                        </StackPanel>
                    </UniformGrid>
                </Border>
            </Grid>

            <!-- Purchase Orders List -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" 
                    BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">
                <Grid>
                    <!-- Sample Data Grid -->
                    <DataGrid Name="dgPurchaseOrders" AutoGenerateColumns="False"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              Background="White" RowBackground="White" 
                              AlternatingRowBackground="#F8F9FA"
                              BorderThickness="0" CanUserAddRows="False"
                              FontSize="13">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="رقم الطلب" Width="100" Binding="{Binding OrderNumber}"/>
                            <DataGridTextColumn Header="تاريخ الطلب" Width="100" Binding="{Binding OrderDate}"/>
                            <DataGridTextColumn Header="المورد" Width="180" Binding="{Binding SupplierName}"/>
                            <DataGridTextColumn Header="المجموع" Width="100" Binding="{Binding TotalAmount}"/>
                            <DataGridTextColumn Header="تاريخ التسليم" Width="100" Binding="{Binding DeliveryDate}"/>
                            <DataGridTextColumn Header="حالة الطلب" Width="100" Binding="{Binding Status}"/>
                            <DataGridTextColumn Header="طالب الشراء" Width="120" Binding="{Binding Requester}"/>
                            <DataGridTextColumn Header="ملاحظات" Width="*" Binding="{Binding Notes}"/>
                            <DataGridTemplateColumn Header="الإجراءات" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="تفاصيل" Background="#17A2B8" Foreground="White"
                                                    Padding="6,3" Margin="2" BorderThickness="0" FontSize="10"/>
                                            <Button Content="اعتماد" Background="#198754" Foreground="White"
                                                    Padding="6,3" Margin="2" BorderThickness="0" FontSize="10"/>
                                            <Button Content="تعديل" Background="#FFC107" Foreground="Black"
                                                    Padding="6,3" Margin="2" BorderThickness="0" FontSize="10"/>
                                            <Button Content="رفض" Background="#DC3545" Foreground="White"
                                                    Padding="6,3" Margin="2" BorderThickness="0" FontSize="10"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- No Data Message -->
                    <StackPanel Name="pnlNoData" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Fill="#CCC" Width="64" Height="64" Margin="0,0,0,20"
                              Data="M5,3C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V12H19V19H5V5H12V3H5M17.78,4C17.61,4 17.43,4.07 17.3,4.2L16.08,5.41L18.58,7.91L19.8,6.7C20.06,6.44 20.06,6 19.8,5.75L18.25,4.2C18.12,4.07 17.95,4 17.78,4M15.37,6.12L8,13.5V16H10.5L17.87,8.62L15.37,6.12Z"/>
                        <TextBlock Text="لا توجد طلبات شراء" FontSize="18" 
                                   Foreground="#999" FontWeight="SemiBold"/>
                        <TextBlock Text="قم بإضافة طلب شراء جديد للبدء" FontSize="14" 
                                   Foreground="#AAA" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
