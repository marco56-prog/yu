<Window x:Class="AccountingSystem.WPF.Views.PurchaseReturnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="مرتجع شراء" Height="900" Width="1400" WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft" FontFamily="Segoe UI, Tahoma" FontSize="14"
        MinWidth="1200" MinHeight="800" WindowState="Maximized">

    <Window.Resources>
        <!-- نفس الموارد من مرتجع البيع -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#10B981"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="TextBrush" Color="#1F2937"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="CardBrush" Color="White"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#E5E7EB" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButtonStyle" BasedOn="{StaticResource ModernButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        </Style>

        <Style x:Key="DangerButtonStyle" BasedOn="{StaticResource ModernButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    <!-- Local resources removed to rely on Resources/UnifiedStyles.xaml -->
    </Window.Resources>
    <Grid Background="{StaticResource SecondaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- شريط العنوان والأزرار -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="8,8,8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- معلومات المرتجع -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦↩️" FontSize="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="مرتجع شراء" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                        <TextBlock x:Name="lblReturnNumber" Text="سيتم التوليد تلقائياً عند الحفظ" 
                                   FontSize="12" Foreground="{StaticResource MutedBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- أزرار التحكم -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnNew" Content="جديد" Style="{StaticResource ModernButtonStyle}" Click="btnNew_Click"/>
                    <Button x:Name="btnSave" Content="حفظ" Style="{StaticResource SuccessButtonStyle}" Click="btnSave_Click"/>
                    <Button x:Name="btnPrint" Content="طباعة" Style="{StaticResource ModernButtonStyle}" Click="btnPrint_Click"/>
                    <Button x:Name="btnCancel" Content="إغلاق" Style="{StaticResource DangerButtonStyle}" Click="btnCancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- المحتوى الرئيسي -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="8,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- معلومات المرتجع الأساسية -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- المورد -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <Label Content="المورد:" FontWeight="Bold" Padding="0,0,0,4"/>
                            <ComboBox x:Name="cmbSupplier" Style="{StaticResource ModernComboBoxStyle}"
                                     DisplayMemberPath="SupplierName" IsEditable="True"
                                     SelectionChanged="cmbSupplier_SelectionChanged"/>
                        </StackPanel>

                        <!-- تاريخ المرتجع -->
                        <StackPanel Grid.Column="1" Margin="8,0">
                            <Label Content="تاريخ المرتجع:" FontWeight="Bold" Padding="0,0,0,4"/>
                            <DatePicker x:Name="dpReturnDate" Style="{StaticResource ModernComboBoxStyle}"/>
                        </StackPanel>

                        <!-- الرصيد السابق -->
                        <StackPanel Grid.Column="2" Margin="8,0,0,0">
                            <Label Content="الرصيد السابق:" FontWeight="Bold" Padding="0,0,0,4"/>
                            <Label x:Name="lblPreviousBalance" Content="0.00 ج.م" 
                                  Background="{StaticResource SecondaryBrush}" 
                                  BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                  Padding="12,8" HorizontalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- اختيار الفاتورة الأصلية -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="فاتورة الشراء الأصلية" FontSize="16" FontWeight="Bold" 
                                  Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>

                        <!-- اختيار الفاتورة -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,12">
                            <Label Content="اختر فاتورة الشراء الأصلية:" FontWeight="Bold" Padding="0,0,0,4"/>
                            <ComboBox x:Name="cmbOriginalInvoice" Style="{StaticResource ModernComboBoxStyle}"
                                     DisplayMemberPath="InvoiceNumber"
                                     SelectionChanged="cmbOriginalInvoice_SelectionChanged"/>
                        </StackPanel>

                        <!-- معلومات الفاتورة المختارة -->
                        <Border x:Name="pnlOriginalInvoiceInfo" Grid.Row="2" Background="{StaticResource SecondaryBrush}"
                               BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6"
                               Padding="12" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="رقم الفاتورة:" FontSize="12" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock x:Name="lblOriginalInvoiceNumber" Text="-" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="تاريخ الفاتورة:" FontSize="12" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock x:Name="lblOriginalInvoiceDate" Text="-" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="إجمالي الفاتورة:" FontSize="12" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock x:Name="lblOriginalInvoiceTotal" Text="-" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- بنود الفاتورة الأصلية -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="بنود فاتورة الشراء الأصلية" FontSize="16" FontWeight="Bold" 
                                  Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>

                        <!-- جدول البنود الأصلية -->
                        <DataGrid x:Name="dgOriginalItems" Grid.Row="1" AutoGenerateColumns="False" 
                                 CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False"
                                 GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                 Background="White" RowBackground="White" AlternatingRowBackground="#F9FAFB"
                                 BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                 FontSize="13" SelectionMode="Single">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="المنتج" Binding="{Binding Product.ProductName}" Width="2*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="الوحدة" Binding="{Binding Unit.UnitName}" Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="الكمية" Binding="{Binding Quantity, StringFormat=F2}" Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="السعر" Binding="{Binding UnitPrice, StringFormat=C}" Width="100" IsReadOnly="True"/>
                                <DataGridTextColumn Header="الإجمالي" Binding="{Binding TotalPrice, StringFormat=C}" Width="100" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- إضافة للمرتجع -->
                        <Grid Grid.Row="2" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- الكمية المرتجعة -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <Label Content="الكمية المرتجعة:" FontWeight="Bold" Padding="0,0,0,4"/>
                                <TextBox x:Name="txtReturnQuantity" Text="1" Style="{StaticResource ModernTextBoxStyle}"/>
                            </StackPanel>

                            <!-- سبب الإرجاع -->
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <Label Content="سبب الإرجاع:" FontWeight="Bold" Padding="0,0,0,4"/>
                                <TextBox x:Name="txtReturnReason" Style="{StaticResource ModernTextBoxStyle}"
                                        ToolTip="مثال: تالف، مقاس خطأ، جودة غير مناسبة"/>
                            </StackPanel>

                            <!-- زر الإضافة -->
                            <StackPanel Grid.Column="2" Margin="12,0,0,0" VerticalAlignment="Bottom">
                                <Button x:Name="btnAddFromOriginal" Content="إضافة للمرتجع" Style="{StaticResource SuccessButtonStyle}"
                                       Width="120" Height="36" Click="btnAddFromOriginal_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- بنود المرتجع -->
                <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="بنود مرتجع الشراء" FontSize="16" FontWeight="Bold" 
                                  Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>

                        <DataGrid x:Name="dgItems" Grid.Row="1" AutoGenerateColumns="False" 
                                 CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False"
                                 GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                 Background="White" RowBackground="White" AlternatingRowBackground="#F9FAFB"
                                 BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                 FontSize="13" MinHeight="200">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="المنتج" Binding="{Binding Product.ProductName}" Width="2*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="الوحدة" Binding="{Binding Unit.UnitName}" Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="الكمية المرتجعة" Binding="{Binding Quantity, StringFormat=F2}" Width="120" IsReadOnly="True"/>
                                <DataGridTextColumn Header="السعر" Binding="{Binding UnitPrice, StringFormat=C}" Width="100" IsReadOnly="True"/>
                                <DataGridTextColumn Header="الإجمالي" Binding="{Binding TotalPrice, StringFormat=C}" Width="100" IsReadOnly="True"/>
                                <DataGridTextColumn Header="سبب الإرجاع" Binding="{Binding ReturnReason}" Width="*" IsReadOnly="True"/>
                                <DataGridTemplateColumn Header="حذف" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="🗑️" Background="{StaticResource DangerBrush}" Foreground="White"
                                                   BorderThickness="0" Padding="4" Cursor="Hand"
                                                   Click="btnDeleteItem_Click" Tag="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- الإجماليات والملاحظات -->
                <Border Grid.Row="4" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <!-- الملاحظات -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Top">
                            <Label Content="ملاحظات:" FontWeight="Bold" Padding="0,0,0,4"/>
                            <TextBox x:Name="txtNotes" Style="{StaticResource ModernTextBoxStyle}" Height="80" 
                                    TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- ملخص المالي -->
                        <Border Grid.Column="1" Background="{StaticResource SecondaryBrush}"
                               BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="ملخص مرتجع الشراء" FontSize="16" FontWeight="Bold" 
                                          Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,0,0,12"/>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="الإجمالي الفرعي:" FontWeight="Bold"/>
                                    <Label x:Name="lblSubTotal" Grid.Column="1" Content="0.00 ج.م" FontWeight="Bold" HorizontalContentAlignment="Right"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="الضريبة:" FontWeight="Bold"/>
                                    <Label x:Name="lblTaxAmount" Grid.Column="1" Content="0.00 ج.م" FontWeight="Bold" HorizontalContentAlignment="Right"/>
                                </Grid>

                                <Separator Margin="0,8"/>

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="الإجمالي النهائي:" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                    <Label x:Name="lblNetTotal" Grid.Column="1" Content="0.00 ج.م" FontSize="16" FontWeight="Bold" 
                                          Foreground="{StaticResource AccentBrush}" HorizontalContentAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- شريط الحالة -->
        <Border Grid.Row="2" Background="{StaticResource BorderBrush}" Height="28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="📦↩️ مرتجع شراء: اختر المورد، ثم الفاتورة، ثم البنود المراد إرجاعها للمورد" 
                          VerticalAlignment="Center" Margin="8,0" FontSize="12" Foreground="{StaticResource MutedBrush}"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                    <TextBlock Text="⏰" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='yyyy/MM/dd HH:mm'}" 
                              VerticalAlignment="Center" FontSize="12" Foreground="{StaticResource MutedBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
