<Window x:Class="AccountingSystem.WPF.Views.ReceiptVouchersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="سندات القبض" 
        Height="600" Width="1000" 
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft">
    
    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007BFF" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Path Fill="White" Width="24" Height="24" Margin="0,0,10,0" 
                          Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z"/>
                    <TextBlock Text="سندات القبض" FontSize="22" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Grid.Column="1" Name="btnNewReceipt"
                        Click="btnNewReceipt_Click"
                        Background="#28A745" Foreground="White"
                        Padding="15,8" BorderThickness="0" 
                        FontSize="14" FontWeight="Bold"
                        Style="{DynamicResource ModernButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="White" Width="16" Height="16" Margin="0,0,5,0"
                              Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
                        <TextBlock Text="سند قبض جديد"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search and Filters -->
            <Border Grid.Row="0" Background="White" CornerRadius="8" 
                    BorderBrush="#E0E0E0" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <TextBox Grid.Column="0" Name="txtSearch" 
                             Text="البحث برقم السند أو العميل..." 
                             Foreground="Gray" Padding="10" 
                             FontSize="14" Height="36"
                             BorderBrush="#DDD" BorderThickness="1"/>

                    <!-- Date From -->
                    <DatePicker Grid.Column="1" Name="dpDateFrom" Margin="10,0"
                                Width="120" Height="36"/>

                    <!-- Date To -->
                    <DatePicker Grid.Column="2" Name="dpDateTo" Margin="10,0"
                                Width="120" Height="36"/>

                    <!-- Search Button -->
                    <Button Grid.Column="3" Name="btnSearch"
                            Click="btnSearch_Click"
                            Background="#007BFF" Foreground="White"
                            Padding="15,8" BorderThickness="0"
                            FontSize="14" Height="36">
                        <StackPanel Orientation="Horizontal">
                            <Path Fill="White" Width="16" Height="16" Margin="0,0,5,0"
                                  Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
                            <TextBlock Text="بحث"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Receipts List -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" 
                    BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">
                <Grid>
                    <!-- Sample Data Grid -->
                    <DataGrid Name="dgReceipts" AutoGenerateColumns="False"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              Background="White" RowBackground="White" 
                              AlternatingRowBackground="#F8F9FA"
                              BorderThickness="0" CanUserAddRows="False"
                              FontSize="13">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="رقم السند" Width="100" Binding="{Binding ReceiptNumber}"/>
                            <DataGridTextColumn Header="التاريخ" Width="100" Binding="{Binding Date}"/>
                            <DataGridTextColumn Header="العميل" Width="200" Binding="{Binding CustomerName}"/>
                            <DataGridTextColumn Header="المبلغ" Width="120" Binding="{Binding Amount}"/>
                            <DataGridTextColumn Header="طريقة الدفع" Width="120" Binding="{Binding PaymentMethod}"/>
                            <DataGridTextColumn Header="البيان" Width="*" Binding="{Binding Description}"/>
                            <DataGridTextColumn Header="المحاسب" Width="120" Binding="{Binding Accountant}"/>
                            <DataGridTemplateColumn Header="الإجراءات" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="طباعة" Background="#17A2B8" Foreground="White"
                                                    Padding="8,4" Margin="2" BorderThickness="0" FontSize="11"/>
                                            <Button Content="تعديل" Background="#FFC107" Foreground="Black"
                                                    Padding="8,4" Margin="2" BorderThickness="0" FontSize="11"/>
                                            <Button Content="حذف" Background="#DC3545" Foreground="White"
                                                    Padding="8,4" Margin="2" BorderThickness="0" FontSize="11"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- No Data Message -->
                    <StackPanel Name="pnlNoData" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Fill="#CCC" Width="64" Height="64" Margin="0,0,0,20"
                              Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z"/>
                        <TextBlock Text="لا توجد سندات قبض" FontSize="18" 
                                   Foreground="#999" FontWeight="SemiBold"/>
                        <TextBlock Text="قم بإضافة سند قبض جديد للبدء" FontSize="14" 
                                   Foreground="#AAA" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
