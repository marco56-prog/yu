<Window x:Class="AccountingSystem.WPF.Views.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="طباعة الإيصال" Height="600" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        Background="#F8F9FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Receipt Content -->
        <Border Grid.Row="0" Background="White" Margin="20" CornerRadius="10" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="شركة نظام المحاسبة" 
                              FontSize="20" FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,5"/>
                    
                    <TextBlock Text="العنوان - رقم الهاتف" 
                              FontSize="12" 
                              HorizontalAlignment="Center" 
                              Foreground="#666666" 
                              Margin="0,0,0,20"/>

                    <!-- Receipt Info -->
                    <StackPanel Margin="0,0,0,15">
                        <Label Name="lblReceiptNumber" FontWeight="Bold"/>
                        <Label Name="lblDate"/>
                        <Label Name="lblCashier"/>
                    </StackPanel>

                    <!-- Separator -->
                    <Border Height="1" Background="#E0E0E0" Margin="0,10,0,10"/>

                    <!-- Items Header -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="المنتج" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="الكمية" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="السعر" FontWeight="Bold" TextAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="الإجمالي" FontWeight="Bold" TextAlignment="Right"/>
                    </Grid>

                    <Border Height="1" Background="#E0E0E0" Margin="0,5,0,10"/>

                    <!-- Items -->
                    <StackPanel Name="pnlItems" Margin="0,0,0,15"/>

                    <!-- Separator -->
                    <Border Height="1" Background="#E0E0E0" Margin="0,10,0,10"/>

                    <!-- Totals -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="المجموع الفرعي:" FontWeight="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1" Name="lblSubTotal" HorizontalContentAlignment="Right"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="الخصم:" FontWeight="Bold" Foreground="Red"/>
                        <Label Grid.Row="1" Grid.Column="1" Name="lblDiscount" HorizontalContentAlignment="Right" Foreground="Red"/>

                        <Border Grid.Row="2" Grid.ColumnSpan="2" Height="1" Background="#E0E0E0" Margin="0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="الإجمالي:" FontSize="16" FontWeight="Bold"/>
                        <Label Grid.Row="3" Grid.Column="1" Name="lblTotal" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Right"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="المبلغ المدفوع:" FontWeight="Bold"/>
                        <Label Grid.Row="4" Grid.Column="1" Name="lblAmountPaid" HorizontalContentAlignment="Right"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="الباقي:" FontWeight="Bold" Foreground="Green"/>
                        <Label Grid.Row="5" Grid.Column="1" Name="lblChange" HorizontalContentAlignment="Right" Foreground="Green"/>
                    </Grid>

                    <!-- Payment Method -->
                    <Label Name="lblPaymentMethod" Margin="0,10,0,0" FontWeight="Bold"/>

                    <!-- Footer -->
                    <TextBlock Text="شكراً لتسوقكم معنا" 
                              HorizontalAlignment="Center" 
                              FontStyle="Italic" 
                              Margin="0,20,0,0" 
                              Foreground="#666666"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20">
            
            <Button Name="btnPrint" Content="🖨️ طباعة" 
                   Width="100" Height="40" 
                   Background="#27AE60" Foreground="White" 
                   FontSize="14" FontWeight="Bold" 
                   BorderThickness="0" 
                   Margin="0,0,10,0" 
                   Click="btnPrint_Click"
                   Style="{DynamicResource ModernButtonStyle}"/>
            
            <Button Name="btnClose" Content="إغلاق" 
                   Width="80" Height="40" 
                   Background="#95A5A6" Foreground="White" 
                   FontSize="14" FontWeight="Bold" 
                   BorderThickness="0" 
                   Margin="10,0,0,0" 
                   Click="btnClose_Click"
                   Style="{DynamicResource ModernButtonStyle}"/>
        </StackPanel>
    </Grid>

    <Window.Resources>
        <Style TargetType="Button" x:Key="ModernButtonStyle">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="5" 
                               BorderBrush="{TemplateBinding BorderBrush}" 
                               BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
