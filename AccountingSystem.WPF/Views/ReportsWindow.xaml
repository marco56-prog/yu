<Window x:Class="AccountingSystem.WPF.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="التقارير الشاملة - النظام المحاسبي" 
        Height="800" Width="1400"
        Style="{StaticResource StandardWindow}">

    <Window.Resources>
        <!-- استخدام الأنماط الموحدة -->
        <Style x:Key="CardStyle" TargetType="Border" BasedOn="{StaticResource StandardCard}"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="📊 التقارير الشاملة" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="جميع التقارير والإحصائيات اللازمة لإدارة أعمالك" 
                           FontSize="14" 
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- إحصائيات سريعة -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
            <Border Background="{DynamicResource PrimaryBrush}" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="📈" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="15,450 ج.م" FontSize="20" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="مبيعات اليوم" FontSize="14" 
                               Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <Border Background="{DynamicResource SuccessBrush}" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="🛒" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="8,200 ج.م" FontSize="20" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="مشتريات اليوم" FontSize="14" 
                               Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <Border Background="{DynamicResource WarningBrush}" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="7,250 ج.م" FontSize="20" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="صافي الربح" FontSize="14" 
                               Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <Border Background="{DynamicResource PrimaryBrush}" Padding="15" Margin="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="142" FontSize="24" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="عدد العملاء" FontSize="14" 
                               Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- التبويبات الرئيسية -->
        <TabControl Grid.Row="2" Background="Transparent" BorderThickness="0">
            
            <!-- تقارير المبيعات -->
            <TabItem Header="📈 تقارير المبيعات">
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- أدوات التقارير -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Background="#3B82F6" Foreground="White" Padding="10" Margin="5" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📊" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="تقرير يومي"/>
                                </StackPanel>
                            </Button>
                            <Button Background="#3B82F6" Foreground="White" Padding="10" Margin="5" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📅" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="تقرير شهري"/>
                                </StackPanel>
                            </Button>
                            <Button Background="{DynamicResource SuccessBrush}" Foreground="White" Padding="10" Margin="5" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📋" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="تقرير مُخصص"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- منطقة عرض التقرير -->
                        <Border Grid.Row="1" Background="#F8F9FA" Padding="40">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="📊" FontSize="64" Foreground="#9CA3AF"/>
                                <TextBlock Text="اختر نوع التقرير لعرض البيانات" 
                                           FontSize="18" 
                                           Foreground="#9CA3AF" 
                                           HorizontalAlignment="Center"
                                           Margin="0,20,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>

            <!-- تقارير المشتريات -->
            <TabItem Header="🛒 تقارير المشتريات">
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Background="#3B82F6" Foreground="White" Padding="10" Margin="5" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📦" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="مشتريات الموردين"/>
                                </StackPanel>
                            </Button>
                            <Button Background="#3B82F6" Foreground="White" Padding="10" Margin="5" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💳" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="المدفوعات للموردين"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <Border Grid.Row="1" Background="#F8F9FA" Padding="40">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🛒" FontSize="64" Foreground="#9CA3AF"/>
                                <TextBlock Text="تقارير المشتريات والموردين" 
                                           FontSize="18" 
                                           Foreground="#9CA3AF" 
                                           HorizontalAlignment="Center"
                                           Margin="0,20,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>

            <!-- تقارير المخزون -->
            <TabItem Header="📦 تقارير المخزون">
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Background="#3B82F6" Foreground="White" Padding="10" Margin="5" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📋" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="جرد المخزون"/>
                                </StackPanel>
                            </Button>
                            <Button Background="{DynamicResource DangerBrush}" Foreground="White" Padding="10" Margin="5" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚠️" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="أصناف تحت الحد الأدنى"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <Border Grid.Row="1" Background="#F8F9FA" Padding="40">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="📦" FontSize="64" Foreground="#9CA3AF"/>
                                <TextBlock Text="تقارير وإحصائيات المخزون" 
                                           FontSize="18" 
                                           Foreground="#9CA3AF" 
                                           HorizontalAlignment="Center"
                                           Margin="0,20,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>

            <!-- التقارير المالية -->
            <TabItem Header="💰 التقارير المالية">
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Background="#3B82F6" Foreground="White" Padding="10" Margin="5" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📊" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="الأرباح والخسائر"/>
                                </StackPanel>
                            </Button>
                            <Button Background="#3B82F6" Foreground="White" Padding="10" Margin="5" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💳" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="التدفقات النقدية"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <Border Grid.Row="1" Background="#F8F9FA" Padding="40">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="💰" FontSize="64" Foreground="#9CA3AF"/>
                                <TextBlock Text="التقارير والتحليلات المالية" 
                                           FontSize="18" 
                                           Foreground="#9CA3AF" 
                                           HorizontalAlignment="Center"
                                           Margin="0,20,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>

        <!-- شريط الحالة -->
        <Border Grid.Row="3" 
                Background="#F8F9FA" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="15,12"
                Margin="0,20,0,0">
            <Grid>
                <TextBlock Text="نظام التقارير الشامل - آخر تحديث: اليوم 16:30"
                           Foreground="#333333"
                           VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="�� تحديث"
                            Background="{DynamicResource SuccessBrush}" Foreground="White" 
                            Padding="10" BorderThickness="0"
                            Margin="5,0"/>
                    <Button Content="💾 تصدير" 
                            Background="{DynamicResource WarningBrush}" Foreground="White" 
                            Padding="10" BorderThickness="0"
                            Margin="5,0"/>
                    <Button Content="❌ إغلاق" 
                            Background="#6B7280" Foreground="White" 
                            Padding="10" BorderThickness="0"
                            Margin="5,0"
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
