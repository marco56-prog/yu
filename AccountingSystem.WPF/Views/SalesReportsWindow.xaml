<Window x:Class="AccountingSystem.WPF.Views.SalesReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تقارير المبيعات" 
        Height="700" Width="1200" 
        Style="{StaticResource StandardWindow}"
        WindowState="Maximized">
    
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E8B57"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Rely on centralized 'HeaderStyle' from UnifiedStyles.xaml -->
        
        <Style x:Key="SummaryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Grid.Row="0" Text="تقارير المبيعات" 
                   FontSize="22" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Foreground="#2E8B57" Margin="0,10"/>

        <!-- فلاتر التقرير -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" 
                CornerRadius="5" Margin="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" 
                           Text="فلاتر التقرير" Style="{StaticResource HeaderStyle}"/>

                <!-- من تاريخ -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                    <TextBlock Text="من تاريخ:" FontWeight="Bold"/>
                    <DatePicker Name="dpFromDate"/>
                </StackPanel>

                <!-- إلى تاريخ -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                    <TextBlock Text="إلى تاريخ:" FontWeight="Bold"/>
                    <DatePicker Name="dpToDate"/>
                </StackPanel>

                <!-- العميل -->
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="5">
                    <TextBlock Text="العميل:" FontWeight="Bold"/>
                    <ComboBox Name="cmbCustomer" DisplayMemberPath="CustomerName" 
                              SelectedValuePath="CustomerId">
                        <ComboBoxItem Content="جميع العملاء" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>

                <!-- نوع التقرير -->
                <StackPanel Grid.Row="1" Grid.Column="3" Margin="5">
                    <TextBlock Text="نوع التقرير:" FontWeight="Bold"/>
                    <ComboBox Name="cmbReportType" SelectedIndex="0">
                        <ComboBoxItem Content="تقرير شامل" Tag="Summary"/>
                        <ComboBoxItem Content="تفصيلي بالفواتير" Tag="Detailed"/>
                        <ComboBoxItem Content="تفصيلي بالأصناف" Tag="Items"/>
                        <ComboBoxItem Content="تقرير العملاء" Tag="Customers"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ملخص سريع -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- إجمالي المبيعات -->
            <Border Grid.Column="0" Style="{StaticResource SummaryCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="إجمالي المبيعات" FontWeight="Bold" 
                               HorizontalAlignment="Center" FontSize="14"/>
                    <TextBlock Name="lblTotalSales" Text="0.00 ج.م" 
                               FontWeight="Bold" FontSize="18" 
                               Foreground="Green" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- عدد الفواتير -->
            <Border Grid.Column="1" Style="{StaticResource SummaryCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="عدد الفواتير" FontWeight="Bold" 
                               HorizontalAlignment="Center" FontSize="14"/>
                    <TextBlock Name="lblInvoiceCount" Text="0" 
                               FontWeight="Bold" FontSize="18" 
                               Foreground="Blue" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- متوسط الفاتورة -->
            <Border Grid.Column="2" Style="{StaticResource SummaryCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="متوسط الفاتورة" FontWeight="Bold" 
                               HorizontalAlignment="Center" FontSize="14"/>
                    <TextBlock Name="lblAverageInvoice" Text="0.00 ج.م" 
                               FontWeight="Bold" FontSize="18" 
                               Foreground="Orange" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- إجمالي الخصومات -->
            <Border Grid.Column="3" Style="{StaticResource SummaryCardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="إجمالي الخصومات" FontWeight="Bold" 
                               HorizontalAlignment="Center" FontSize="14"/>
                    <TextBlock Name="lblTotalDiscount" Text="0.00 ج.م" 
                               FontWeight="Bold" FontSize="18" 
                               Foreground="Red" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- منطقة التقرير -->
        <TabControl Grid.Row="3" Margin="10">
            <!-- تبويب التقرير -->
            <TabItem Header="التقرير التفاعلي" Name="tabReport">
                <DataGrid Name="dgReport" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          IsReadOnly="True"
                          MouseDoubleClick="dgReport_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="رقم الفاتورة" Binding="{Binding InvoiceNumber}" Width="120"/>
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding InvoiceDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="100"/>
                        <DataGridTextColumn Header="العميل" Binding="{Binding CustomerName}" Width="*"/>
                        <DataGridTextColumn Header="الإجمالي" Binding="{Binding SubTotal, StringFormat='{}{0:N2} ج.م'}" Width="120"/>
                        <DataGridTextColumn Header="الضريبة" Binding="{Binding TaxAmount, StringFormat='{}{0:N2} ج.م'}" Width="100"/>
                        <DataGridTextColumn Header="الصافي" Binding="{Binding NetTotal, StringFormat='{}{0:N2} ج.م'}" Width="120"/>
                        <DataGridTemplateColumn Header="العمليات" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="📋 فتح" Width="50" Height="25" 
                                               Background="#2196F3" Foreground="White" 
                                               BorderThickness="0" Margin="2"
                                               Click="btnOpenInvoice_Click" ToolTip="فتح الفاتورة"/>
                                        <Button Content="👤" Width="30" Height="25" 
                                               Background="#4CAF50" Foreground="White" 
                                               BorderThickness="0" Margin="2"
                                               Click="btnOpenCustomer_Click" ToolTip="بيانات العميل"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- تبويب الرسم البياني -->
            <TabItem Header="الرسم البياني" Name="tabChart">
                <Grid>
                    <TextBlock Text="الرسم البياني سيتم إضافته في المراحل القادمة" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="16" 
                               Foreground="Gray"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- أزرار التحكم -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button Name="btnGenerate" Content="تولید التقرير" 
                    Style="{StaticResource ButtonStyle}" Width="120"
                    Click="btnGenerate_Click"/>
            <Button Name="btnExportExcel" Content="تصدير إلى Excel" 
                    Style="{StaticResource ButtonStyle}" Width="120"
                    Click="btnExportExcel_Click"/>
            <Button Name="btnExportPDF" Content="تصدير إلى PDF" 
                    Style="{StaticResource ButtonStyle}" Width="120"
                    Click="btnExportPDF_Click"/>
            <Button Name="btnPrint" Content="طباعة" 
                    Style="{StaticResource ButtonStyle}" Width="100"
                    Click="btnPrint_Click"/>
            <Button Name="btnClose" Content="إغلاق" 
                    Background="Gray" Foreground="White" 
                    Padding="10,5" Margin="5" FontWeight="Bold"
                    Width="100" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
