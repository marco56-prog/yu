<Window x:Class="AccountingSystem.WPF.Views.Settings.ThemeTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="اختبار الثيمات والألوان" Height="600" Width="800"
        Background="{DynamicResource BackgroundBrush}"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <TextBlock Text="اختبار نظام الثيمات والألوان" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <!-- Theme Controls -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Theme Selection -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="الثيم:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0" 
                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <Button x:Name="btnWin11" Content="Win 11" Width="80" Margin="5" Click="ChangeTheme_Click" Tag="Win11"/>
                    <Button x:Name="btnModern" Content="Modern" Width="80" Margin="5" Click="ChangeTheme_Click" Tag="Modern"/>
                    <Button x:Name="btnClassic" Content="Classic" Width="80" Margin="5" Click="ChangeTheme_Click" Tag="Classic"/>
                    <Button x:Name="btnWin7" Content="Win 7" Width="80" Margin="5" Click="ChangeTheme_Click" Tag="Win7"/>
                </StackPanel>

                <!-- Accent Colors -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="اللون الأساسي:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0"
                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <Button x:Name="btnBlue" Content="أزرق" Width="70" Margin="5" Click="ChangeAccent_Click" Tag="Blue"/>
                    <Button x:Name="btnGreen" Content="أخضر" Width="70" Margin="5" Click="ChangeAccent_Click" Tag="Green"/>
                    <Button x:Name="btnAmber" Content="عنبري" Width="70" Margin="5" Click="ChangeAccent_Click" Tag="Amber"/>
                    <Button x:Name="btnRed" Content="أحمر" Width="70" Margin="5" Click="ChangeAccent_Click" Tag="Red"/>
                    <Button x:Name="btnPurple" Content="بنفسجي" Width="70" Margin="5" Click="ChangeAccent_Click" Tag="Purple"/>
                    <Button x:Name="btnTeal" Content="تركوازي" Width="70" Margin="5" Click="ChangeAccent_Click" Tag="Teal"/>
                </StackPanel>

                <!-- Font Scale -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <TextBlock Text="حجم الخط:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0"
                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <Button x:Name="btnScale90" Content="90%" Width="60" Margin="5" Click="ChangeScale_Click" Tag="Scale90"/>
                    <Button x:Name="btnScale100" Content="100%" Width="60" Margin="5" Click="ChangeScale_Click" Tag="Scale100"/>
                    <Button x:Name="btnScale110" Content="110%" Width="60" Margin="5" Click="ChangeScale_Click" Tag="Scale110"/>
                    <Button x:Name="btnScale125" Content="125%" Width="60" Margin="5" Click="ChangeScale_Click" Tag="Scale125"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Demo Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Colors Display -->
                <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock Text="الألوان الأساسية" FontWeight="Bold" Margin="0,0,0,10" 
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <Border Background="{DynamicResource PrimaryBrush}" Height="30" CornerRadius="4" Margin="0,2">
                                <TextBlock Text="الأساسي" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="{DynamicResource BackgroundBrush}" Height="30" CornerRadius="4" Margin="0,2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                <TextBlock Text="الخلفية" Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="{DynamicResource SurfaceBrush}" Height="30" CornerRadius="4" Margin="0,2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                <TextBlock Text="السطح" Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="ألوان النص" FontWeight="Bold" Margin="0,0,0,10" 
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="النص الأساسي" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,5"/>
                            <TextBlock Text="النص الثانوي" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,5"/>
                            <TextBlock Text="النص المكتوم" Foreground="{DynamicResource MutedBrush}" Margin="0,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10">
                            <TextBlock Text="ألوان الحالة" FontWeight="Bold" Margin="0,0,0,10" 
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <Border Background="{DynamicResource SuccessBrush}" Height="25" CornerRadius="4" Margin="0,2">
                                <TextBlock Text="نجح" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="{DynamicResource DangerBrush}" Height="25" CornerRadius="4" Margin="0,2">
                                <TextBlock Text="خطر" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="{DynamicResource WarningBrush}" Height="25" CornerRadius="4" Margin="0,2">
                                <TextBlock Text="تحذير" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Margin="10">
                            <TextBlock Text="أحجام الخط" FontWeight="Bold" Margin="0,0,0,10" 
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="صغير جداً" FontSize="{DynamicResource FontSizeXS}" Margin="0,2"/>
                            <TextBlock Text="صغير" FontSize="{DynamicResource FontSizeSmall}" Margin="0,2"/>
                            <TextBlock Text="عادي" FontSize="{DynamicResource FontSizeNormal}" Margin="0,2"/>
                            <TextBlock Text="كبير" FontSize="{DynamicResource FontSizeLarge}" Margin="0,2"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Form Elements -->
                <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="1" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="عناصر النموذج" FontWeight="Bold" Margin="0,0,0,15" 
                                  Foreground="{DynamicResource TextPrimaryBrush}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="اسم المستخدم:" Margin="0,5,0,5" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBox Text="مثال" Margin="0,0,0,10" Padding="8"/>
                                
                                <CheckBox Content="تذكرني" Margin="0,10"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="نوع المستخدم:" Margin="0,5,0,5" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <ComboBox Margin="0,0,0,10" Padding="8">
                                    <ComboBoxItem Content="مدير"/>
                                    <ComboBoxItem Content="محاسب" IsSelected="True"/>
                                    <ComboBoxItem Content="كاشير"/>
                                </ComboBox>
                                
                                <RadioButton Content="نشط" IsChecked="True" Margin="0,5"/>
                                <RadioButton Content="غير نشط" Margin="0,5"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="ازرار عادي" Margin="5" Padding="10,5"/>
                            <Button Content="حفظ" Background="{DynamicResource SuccessBrush}" Foreground="White" Margin="5" Padding="10,5"/>
                            <Button Content="حذف" Background="{DynamicResource DangerBrush}" Foreground="White" Margin="5" Padding="10,5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>