<Window x:Class="AccountingSystem.WPF.Views.SimpleItemEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="إضافة صنف جديد" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        PreviewKeyDown="Window_PreviewKeyDown">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Grid.Row="0" Text="إضافة صنف جديد"
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- محتوى النافذة -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                
                <!-- معلومات العميل -->
                <GroupBox Header="معلومات العميل" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="العميل:" 
                                  VerticalAlignment="Center" Margin="0,0,10,0"/>
                        
                        <TextBox Grid.Column="1" x:Name="txtCustomer"
                                Height="35" VerticalContentAlignment="Center"
                                IsReadOnly="True"
                                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                                PreviewKeyDown="txtCustomer_PreviewKeyDown"
                                ToolTip="اضغط F1 للبحث"/>
                        
                        <TextBlock Grid.Column="2" Text="F1" 
                                  VerticalAlignment="Center" 
                                  Margin="5,0,0,0"
                                  Foreground="Gray" FontSize="10"/>
                    </Grid>
                </GroupBox>

                <!-- معلومات المنتج -->
                <GroupBox Header="معلومات المنتج" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- اختيار المنتج -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="المنتج:" 
                                      VerticalAlignment="Center" Margin="0,0,10,0"/>
                            
                            <TextBox Grid.Column="1" x:Name="txtProduct"
                                    Height="35" VerticalContentAlignment="Center"
                                    IsReadOnly="True"
                                    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                                    PreviewKeyDown="txtProduct_PreviewKeyDown"
                                    ToolTip="اضغط F1 للبحث"/>
                            
                            <TextBlock Grid.Column="2" Text="F1" 
                                      VerticalAlignment="Center" 
                                      Margin="5,0,0,0"
                                      Foreground="Gray" FontSize="10"/>
                        </Grid>
                        
                        <!-- معلومات المخزون -->
                        <TextBlock Grid.Row="1" x:Name="lblStock" 
                                  Text="المتوفر: --"
                                  FontSize="12" 
                                  Foreground="Blue"/>
                    </Grid>
                </GroupBox>

                <!-- الكميات والأسعار -->
                <GroupBox Header="الكميات والأسعار" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- الكمية -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="الكمية:" 
                                  VerticalAlignment="Center" Margin="0,0,10,5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtQuantity"
                                Height="35" VerticalContentAlignment="Center"
                                TextAlignment="Center"
                                Margin="0,0,0,5"
                                TextChanged="txtQuantity_TextChanged"/>

                        <!-- السعر -->
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="السعر:" 
                                  VerticalAlignment="Center" Margin="0,0,10,5"/>
                        <TextBox Grid.Row="0" Grid.Column="4" x:Name="txtPrice"
                                Height="35" VerticalContentAlignment="Center"
                                TextAlignment="Center"
                                Margin="0,0,0,5"
                                TextChanged="txtPrice_TextChanged"/>

                        <!-- الخصم -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="الخصم:" 
                                  VerticalAlignment="Center" Margin="0,0,10,5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtDiscount"
                                Height="35" VerticalContentAlignment="Center"
                                TextAlignment="Center"
                                Margin="0,0,0,5"
                                TextChanged="txtDiscount_TextChanged"/>

                        <!-- الإجمالي -->
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="الإجمالي:" 
                                  VerticalAlignment="Center" Margin="0,0,10,5"/>
                        <Border Grid.Row="1" Grid.Column="4" 
                               Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}"
                               BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                               BorderThickness="1"
                               Height="35" 
                               Margin="0,0,0,5">
                            <TextBlock x:Name="lblTotal" 
                                      Text="0.00"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      FontWeight="Bold"
                                      FontSize="14"/>
                        </Border>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- أزرار التحكم -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0">
            <Button x:Name="btnOK" Content="موافق"
                   Width="100" Height="40"
                   Margin="10,0"
                   FontSize="14"
                   Click="btnOK_Click"
                   IsDefault="True"/>
            
            <Button x:Name="btnCancel" Content="إلغاء"
                   Width="100" Height="40"
                   Margin="10,0"
                   FontSize="14"
                   Click="btnCancel_Click"
                   IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>