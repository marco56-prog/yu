<Window x:Class="AccountingSystem.WPF.Views.SupplierSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="بحث في الموردين" 
        Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        FontFamily="Segoe UI, Tahoma"
        FontSize="{StaticResource FontSizeNormal}"
        >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="بحث في الموردين" FontSize="{StaticResource FontSizeLarge}" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="البحث:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="txtSearch" Width="300" Height="25" 
                     TextChanged="txtSearch_TextChanged" 
                     KeyDown="txtSearch_KeyDown"/>
            <Button Name="btnClearSearch" Content="مسح" Margin="10,0,0,0" 
                    Click="btnClearSearch_Click" Width="50" Height="25"/>
        </StackPanel>

        <DataGrid Grid.Row="2" Name="dgSuppliers" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  MouseDoubleClick="dgSuppliers_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="اسم المورد" Binding="{Binding SupplierName}" Width="200"/>
                <DataGridTextColumn Header="الهاتف" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="العنوان" Binding="{Binding Address}" Width="250"/>
                <DataGridTextColumn Header="الرصيد" Binding="{Binding Balance}" Width="100"/>
                <DataGridCheckBoxColumn Header="نشط" Binding="{Binding IsActive}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Name="btnSelect" Content="اختيار" Width="80" Height="30" Margin="5"
                    Click="btnSelect_Click" IsDefault="True"/>
            <Button Name="btnCancel" Content="إلغاء" Width="80" Height="30" Margin="5"
                    Click="btnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
