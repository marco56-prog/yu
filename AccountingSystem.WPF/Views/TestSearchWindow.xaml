<Window x:Class="AccountingSystem.WPF.Views.TestSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="اختبار نوافذ البحث" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Grid.Row="0" Text="اختبار نوافذ البحث والإدخال"
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

        <!-- الأزرار -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Button x:Name="btnTestCustomerSearch" 
                   Content="اختبار بحث العملاء"
                   Width="200" Height="50"
                   Margin="0,10"
                   FontSize="14"
                   Click="btnTestCustomerSearch_Click"/>

            <Button x:Name="btnTestProductSearch" 
                   Content="اختبار بحث المنتجات"
                   Width="200" Height="50"
                   Margin="0,10"
                   FontSize="14"
                   Click="btnTestProductSearch_Click"/>

            <Button x:Name="btnTestItemEntry" 
                   Content="اختبار إدخال صنف"
                   Width="200" Height="50"
                   Margin="0,10"
                   FontSize="14"
                   Click="btnTestItemEntry_Click"/>

            <TextBlock Text="تعليمات:"
                      Margin="0,30,0,10"
                      FontWeight="Bold"/>
            
            <TextBlock TextWrapping="Wrap" 
                      MaxWidth="400"
                      TextAlignment="Center">
                <Run Text="• اضغط F1 في أي حقل للبحث"/>
                <LineBreak/>
                <Run Text="• استخدم الأسهم للتنقل"/>
                <LineBreak/>
                <Run Text="• اضغط Enter للاختيار"/>
                <LineBreak/>
                <Run Text="• اضغط Escape للإلغاء"/>
            </TextBlock>

        </StackPanel>
    </Grid>
</Window>