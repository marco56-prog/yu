<Window x:Class="AccountingSystem.WPF.Views.WarehouseSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="بحث مستودعات" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        ShowInTaskbar="False"
        ResizeMode="CanResize"
        PreviewKeyDown="Window_PreviewKeyDown">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Grid.Row="0" x:Name="lblTitle" Text="بحث مستودعات"
                   Style="{DynamicResource {x:Type TextBlock}}"
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- شريط البحث -->
        <Border Grid.Row="1" 
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                CornerRadius="5" 
                Padding="10" 
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="البحث:"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>

                <TextBox Grid.Column="1" x:Name="txtSearch"
                        Height="30"
                        VerticalContentAlignment="Center"
                        FontSize="14"
                        TextChanged="txtSearch_TextChanged"/>

                <Button Grid.Column="2" x:Name="btnClearSearch"
                       Content="مسح"
                       Width="60" Height="30"
                       Margin="10,0,0,0"
                       Click="btnClearSearch_Click"/>
            </Grid>
        </Border>

        <!-- جدول النتائج -->
        <DataGrid Grid.Row="2" x:Name="dgResults"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  SelectionChanged="dgResults_SelectionChanged"
                  MouseDoubleClick="dgResults_MouseDoubleClick"
                  Margin="0,0,0,10">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="رمز المستودع" Binding="{Binding WarehouseCode}" Width="120"/>
                <DataGridTextColumn Header="اسم المستودع" Binding="{Binding WarehouseName}" Width="*"/>
                <DataGridTextColumn Header="العنوان" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="المدير" Binding="{Binding ManagerName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- شريط المعلومات -->
        <Border Grid.Row="3"
                Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}"
                CornerRadius="3"
                Padding="10,5"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="lblStatus" 
                          Text="استخدم الأسهم للتنقل، Enter للاختيار، Escape للإلغاء"
                          VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" x:Name="lblItemCount"
                          Text="عدد المستودعات: 0"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- أزرار التحكم -->
        <StackPanel Grid.Row="4" Orientation="Horizontal"
                   HorizontalAlignment="Center">
            <Button x:Name="btnOK" Content="موافق"
                   Width="100" Height="35"
                   Margin="5"
                   IsEnabled="False"
                   Click="btnOK_Click"/>
            
            <Button x:Name="btnCancel" Content="إلغاء"
                   Width="100" Height="35"
                   Margin="5"
                   Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>