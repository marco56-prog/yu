<Window x:Class="AccountingSystem.WPF.Windows.SecurityLockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="قفل النظام - نظام المحاسبة" 
        Height="600" Width="800"
        Style="{StaticResource StandardDialog}">

    <Window.Resources>
        <!-- استخدام الأنماط الموحدة -->
        <Style x:Key="ModernButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource StandardPasswordBox}">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="Gray" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- خلفية مع تدرج لوني -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E3F2FD" Offset="0"/>
                <GradientStop Color="#BBDEFB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- المحتوى الرئيسي -->
        <Border Background="White" 
                CornerRadius="20"
                Margin="100"
                Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">
            
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- أيقونة القفل -->
                <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Ellipse Width="80" Height="80" 
                             Fill="{StaticResource PrimaryBrush}" 
                             Opacity="0.1"/>
                    <TextBlock Text="🔒" 
                               FontSize="40" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- العنوان الرئيسي -->
                <TextBlock Grid.Row="1"
                           Text="النظام مقفل"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- اسم المستخدم -->
                <TextBlock Grid.Row="2"
                           Text="{Binding Username, StringFormat='المستخدم: {0}'}"
                           FontSize="18"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- رسالة الحالة -->
                <TextBlock Grid.Row="3"
                           Text="{Binding StatusMessage}"
                           FontSize="16"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <!-- حقل كلمة المرور -->
                <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0,0,0,30">
                    <TextBlock Text="كلمة المرور:"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="5"/>
                    
                    <PasswordBox x:Name="PasswordBox"
                                 Style="{StaticResource ModernPasswordBoxStyle}"
                                 MaxWidth="300"/>
                </StackPanel>

                <!-- أزرار التحكم -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    
                    <Button x:Name="UnlockButton"
                            Content="إلغاء القفل"
                            Style="{StaticResource ModernButtonStyle}"
                            IsDefault="True"
                            Click="UnlockButton_Click"
                            IsEnabled="{Binding IsUnlocking}">
                        
                        <!-- محتوى الزر مع مؤشر التحميل -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        BorderBrush="{TemplateBinding BorderBrush}">
                                    
                                    <Grid>
                                        <!-- النص العادي -->
                                        <ContentPresenter x:Name="NormalContent"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Visibility="Collapsed"/>
                                        
                                        <!-- مؤشر التحميل -->
                                        <StackPanel x:Name="LoadingContent"
                                                   Orientation="Horizontal"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Visibility="Collapsed">
                                            
                                            <TextBlock Text="⏳" FontSize="16" Margin="0,0,5,0"/>
                                            <TextBlock Text="جاري التحقق..." FontSize="14"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#1565C0"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="Foreground" Value="#757575"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- معلومات إضافية -->
                <StackPanel Grid.Row="6" 
                           VerticalAlignment="Bottom" 
                           HorizontalAlignment="Center"
                           Margin="0,30,0,0">
                    
                    <TextBlock Text="💡 نصيحة: اضغط Enter لإلغاء القفل"
                               FontSize="12"
                               Foreground="#757575"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='الوقت الحالي: {0:HH:mm:ss}'}"
                               xmlns:sys="clr-namespace:System;assembly=mscorlib"
                               FontSize="12"
                               Foreground="#757575"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- طبقة شفافة لمنع التفاعل مع باقي النوافذ -->
        <Rectangle Fill="Black" Opacity="0.3" IsHitTestVisible="True"/>
    </Grid>
</Window>