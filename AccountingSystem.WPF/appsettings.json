{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=AccountingSystemDB;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Environment": "Development",
  "App": {
    "CompanyName": "شركة المحبة للأنظمة المحاسبية",
    "Currency": "ج.م",
    "TaxRate": 14,
    "SkipLogin": true,
    "Version": "2.0.0",
    "DatabaseRetryAttempts": 3,
    "DatabaseRetryDelayMs": 1500
  },
  "Database": {
    "CommandTimeout": 60,
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "AccountingSystem": "Debug"
    },
    "LogPath": "logs",
    "RetainedFileCountLimit": 7
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "AccountingSystem": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/application-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  }
}