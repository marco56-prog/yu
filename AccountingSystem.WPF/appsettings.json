{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=AccountingSystemDB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true;Connection Timeout=30"
  },
  "Environment": "Development",
  "App": {
    "CompanyName": "شركة المحبة للأنظمة المحاسبية",
    "Currency": "ج.م",
    "TaxRate": 14,
    "SkipLogin": true,
    "Version": "2.0.0",
    "DatabaseRetryAttempts": 5,
    "DatabaseRetryDelayMs": 2000,
    "EnableAutoMigration": true,
    "EnableDatabaseHealthCheck": true
  },
  "Database": {
    "CommandTimeout": 60,
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 5,
    "MaxRetryDelay": 10
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "AccountingSystem": "Debug"
    },
    "LogPath": "logs",
    "RetainedFileCountLimit": 7
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "AccountingSystem": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/application-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ErrorLogging": {
    "EnableErrorLogging": true,
    "RetentionDays": 90,
    "EnableDeduplication": true,
    "DeduplicationWindowMinutes": 5
  },
  "Performance": {
    "EnableQueryCaching": true,
    "CacheDurationSeconds": 300,
    "EnableConnectionPooling": true,
    "MinPoolSize": 5,
    "MaxPoolSize": 100
  }
}